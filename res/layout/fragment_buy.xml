<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
    <include layout="@layout/bar_navigation_header"
             android:id="@+id/loNavigationBar" />
    <ScrollView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_main"
                android:layout_below="@id/loNavigationBar"
            >

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                >

            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@drawable/bg_services_counters">

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentLeft="true"
                        >

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/default_balance_constant"
                            android:layout_marginBottom="10dp"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            />

                    <com.topface.topface.ui.views.ServicesTextView
                            xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                            android:id="@+id/fbCurCoins"
                            stv:maxChars="5"
                            stv:charPadding="7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            stv:fontSize="24"
                            stv:image="@drawable/ic_coins"
                            />
                </LinearLayout>

                <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        >


                    <com.topface.topface.ui.views.ServicesTextView
                            xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                            android:id="@+id/fbCurLikes"
                            stv:maxChars="5"
                            stv:charPadding="7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            stv:fontSize="24"
                            stv:image="@drawable/ic_sympathy"
                            />
                </LinearLayout>
            </RelativeLayout>

            <com.topface.topface.ui.views.IllustratedTextView
                    android:id="@+id/tvResourcesInfo"
                    style="@style/ItemTitleText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/buying_info"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:singleLine="false"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:padding="10dp"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/fbBuyingDisabled"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        style="@style/TitleWhiteText"
                        android:text="@string/general_buying_disabled"
                        android:visibility="gone"
                        />

                <RelativeLayout
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:id="@+id/likes_title"
                        >

                    <TextView
                            style="@style/TitleWhiteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/buying_sympathies"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_sympathy_small"
                            android:layout_alignParentRight="true"
                            />
                </RelativeLayout>

                <!-- 10 000 power btn -->
                <LinearLayout
                        android:id="@+id/fbLikes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        />

                <!-- Money -->

                <RelativeLayout

                        android:id="@+id/coins_title"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginTop="10dp">

                    <TextView
                            style="@style/TitleWhiteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:text="@string/buying_money"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_coins_small"
                            android:layout_alignParentRight="true"
                            />
                </RelativeLayout>

                <LinearLayout
                        android:id="@+id/fbCoins"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="10dp"
                        />

                <include
                        layout="@layout/item_divider"
                        />

                <Button
                        android:id="@+id/btnOfferwall"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@drawable/btn_vip_sale_selector"
                        style="@style/ButtonWhiteTextMini"
                        android:text="@string/get_it_for_free"
                        />

                <!-- Power -->

                <include
                        android:id="@+id/vipDivider"
                        layout="@layout/item_divider"
                        android:layout_marginTop="10dp"
                        />

                <RelativeLayout
                        android:id="@+id/fbVipTitle"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_marginBottom="2dp"
                        android:layout_marginTop="10dp"
                        >

                    <TextView
                            android:id="@+id/vip_status"
                            style="@style/TitleWhiteText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/vip_not_activated"
                            android:layout_alignParentLeft="true"
                            android:textStyle="bold"/>

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_rocket"
                            android:layout_alignParentRight="true"
                            />
                </RelativeLayout>

                <RelativeLayout
                        android:id="@+id/fbVipButton"
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:background="@drawable/btn_vip_sale_selector"
                        android:layout_marginTop="10dp"
                        android:padding="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:gravity="clip_horizontal">

                    <TextView
                            android:id="@+id/fbVipBtnText"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            style="@style/ButtonWhiteTextMini"
                            android:layout_centerInParent="true"

                            />
                </RelativeLayout>

                <TextView
                        android:id="@+id/vipPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/default_economy_vip"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:visibility="gone"
                        />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <ImageView style="@style/HeaderShadow"/>
</RelativeLayout>