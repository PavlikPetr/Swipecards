<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/loTFGroupMenu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:visibility="invisible" >

        <!-- Profile -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFProfile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:gravity="left|center_vertical"
                android:text="@string/dashbrd_btn_profile"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTFNotifyProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/im_informer"
                android:gravity="center"
                android:text="99"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:visibility="visible" />
        </RelativeLayout>

        <!-- Dating -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFDating"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_dating"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dashbrd_btn_dating"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Likes -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFLikes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_likes"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dashbrd_btn_likes"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTFNotifyLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/im_informer"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <!-- Mutual - Sympathy -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFSympathy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_sympathy"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="15dp"
                android:text="@string/dashbrd_btn_sympathy"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTFNotifySympathy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/im_informer"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <!-- Messages - Chat -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFChat"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_chat"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dashbrd_btn_chat"
                android:textColor="#FFFFFF" />

            <TextView
                android:id="@+id/tvTFNotifyChat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@drawable/im_informer"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:textSize="12dp"
                android:visibility="invisible" />
        </RelativeLayout>

        <!-- Tops -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFTops"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_tops"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dashbrd_btn_tops"
                android:textColor="#FFFFFF" />
        </RelativeLayout>

        <!-- Settings -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnTFSettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/topface_item_selector"
                android:drawableLeft="@drawable/topface_settings"
                android:drawablePadding="5dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="@string/dashbrd_btn_settings"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </LinearLayout>

    <!-- Frame Window -->

    <LinearLayout
        android:id="@+id/loTFWindow"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ivTFShadow"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/topface_shadow"
            android:visibility="gone" />

        <TabHost
            android:id="@android:id/tabhost"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@android:color/transparent"
                android:orientation="vertical" >

                <include layout="@layout/bar_tab_header" />

                <TabWidget
                    android:id="@android:id/tabs"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@android:id/tabcontent"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="#FFFFFF" />
            </LinearLayout>
        </TabHost>
    </LinearLayout>

</RelativeLayout>