<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right">

    <include layout="@layout/chat_date_divider" android:id="@+id/loDateDivider"/>

    <com.topface.topface.ui.views.ImageViewRemote
            android:layout_below="@id/loDateDivider"
            android:id="@+id/ivChatGift"
            style="@style/chat_gift"
            android:layout_alignParentRight="true"/>

    <!-- date -->
    <TextView
            android:id="@+id/chat_date"
            style="@style/chat_date"
            android:layout_toLeftOf="@id/ivChatGift"
            android:layout_alignBottom="@id/ivChatGift"/>

</RelativeLayout>