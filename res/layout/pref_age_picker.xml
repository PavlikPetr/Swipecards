<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >
    
  <!-- left -->
	<LinearLayout
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center_horizontal"
	    android:layout_weight="1"
	    android:orientation="vertical" >
	  <Button
	      android:id="@+id/btnFilterFromUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/numberpicker_up_btn" />
	  <TextView
	      android:id="@+id/tvFilterFrom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dip"
        android:textColor="#4C4C4C"
        android:background="@drawable/numberpicker_input_normal" />
	  <Button
	      android:id="@+id/btnFilterFromDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:background="@drawable/numberpicker_down_btn" />:
	</LinearLayout>
	
	<!-- right -->
  <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center_horizontal"
      android:layout_weight="1"
      android:orientation="vertical" >
    <Button
        android:id="@+id/btnFilterToUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_up_btn" />
    <TextView
        android:id="@+id/tvFilterTo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24dip"
        android:textColor="#4C4C4C" 
        android:background="@drawable/numberpicker_input_normal" />
    <Button
        android:id="@+id/btnFilterToDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/numberpicker_down_btn" />  
  </LinearLayout>

</LinearLayout>