<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="left">

    <include layout="@layout/chat_date_divider" android:id="@+id/loDateDivider"/>

    <LinearLayout
            android:id="@+id/loMap"
        android:layout_below="@id/loDateDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/chat_item_map_bg"
        android:orientation="vertical"
        android:padding="13dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp">

        <ImageView
            android:id="@+id/chat_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/chat_item_map" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/chat_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:textSize="10sp" />

            <ProgressBar
                android:id="@+id/chat_text_progress"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_centerInParent="true"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <!-- date -->
    <TextView
            android:id="@+id/chat_date"
            style="@style/chat_date"
            android:layout_toRightOf="@id/loMap"
            android:layout_alignBottom="@id/loMap"/>
</RelativeLayout>