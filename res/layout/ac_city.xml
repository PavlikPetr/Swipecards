<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/chat_list_bg">

    <include
            android:id="@+id/loNavigationBar"
            layout="@layout/bar_navigation_header"/>

    <EditText
            android:id="@+id/etCityInput"
            style="@style/ItemTitleText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loNavigationBar"
            android:layout_margin="8dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:inputType="text"
            android:singleLine="true"
            android:background="@drawable/city_editbox_selector"/>

    <ListView
            android:id="@+id/lvCityList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/etCityInput"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"/>

    <ProgressBar
            android:id="@+id/prsCityLoading"
            style="@android:style/Widget.ProgressBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loNavigationBar"
            android:src="@drawable/im_bar_header_shadow"/>

</RelativeLayout>