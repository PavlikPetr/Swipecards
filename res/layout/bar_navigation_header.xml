<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loNavigationBar"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/im_bar_header"
              android:baselineAligned="false">

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="left|center_vertical"
            android:visibility="visible">

        <ImageButton
                android:id="@+id/btnNavigationHome"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="30dp"
                android:paddingLeft="8dp"
                android:background="@android:color/transparent"
                android:src="@drawable/navigation_home_selector"
                android:visibility="visible"/>

        <TextView
                android:id="@+id/tvNotificationDialogs"
                style="@style/NotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/btnNavigationHome"
                android:layout_alignTop="@id/btnNavigationHome"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/topface_notification_dialogs"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="11dp"
                android:paddingTop="1dp"
                android:visibility="invisible"/>

        <TextView
                android:id="@+id/tvNotificationLikes"
                style="@style/NotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/btnNavigationHome"
                android:layout_alignTop="@id/btnNavigationHome"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/topface_notification_likes"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="11dp"
                android:paddingTop="0dp"
                android:visibility="invisible"/>

        <TextView
                android:id="@+id/tvNotificationMutual"
                style="@style/NotificationText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/btnNavigationHome"
                android:layout_alignTop="@id/btnNavigationHome"
                android:layout_marginRight="24dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/topface_notification_likes"
                android:gravity="center_horizontal"
                android:paddingLeft="4dp"
                android:paddingRight="11dp"
                android:paddingTop="0dp"
                android:visibility="invisible"/>

        <ImageButton
                android:id="@+id/btnNavigationBack"
                style="@style/BackButton"
                />


    </RelativeLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.5"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/tvNavigationTitle"
                style="@style/NavigationHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tvNavigationSubtitle"
                style="@style/NavigationHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:maxWidth="165dp"
                android:singleLine="false"
                android:textSize="9sp"
                android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="right"
            android:visibility="visible">

        <ImageButton
                android:id="@+id/btnNavigationSettingsBar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:paddingRight="5dp"
                android:paddingLeft="20dp"
                android:background="@android:color/transparent"
                android:src="@drawable/filter_selector"
                android:visibility="gone"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp">


            <ImageButton
                    android:id="@+id/btnEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/navigation_edit_selector"
                    android:background="@android:color/transparent"
                    android:layout_centerVertical="true"
                    android:visibility="gone"/>

            <ProgressBar
                    android:id="@+id/prsNavigationRight"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
        </RelativeLayout>

        <ImageButton
                android:id="@+id/btnNavigationProfileBar"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/navigation_male_profile_selector"
                android:visibility="gone"/>

        <ImageButton
            android:id="@+id/btnNavigationSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@android:color/transparent"
            android:src="@drawable/btn_send_feedback"
            android:visibility="gone"/>

        <ImageButton
                android:id="@+id/btnUserProfActions"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginRight="5dp"
                android:background="@android:color/transparent"
                android:src="@drawable/user_profile_actions_button_selector"
                android:visibility="gone"
                />

        <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/btnNavigationBarAvatar"
                style="@style/NavigationBarAvatar"
                android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>