<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/loNavigationBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/im_bar_header" >

        <Button
            android:id="@+id/btnNavigationHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/navigation_home_selector"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnNavigationBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/navigation_back_selector"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnNavigationBackWithText"            
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@drawable/navigation_back_profile_selector"
            style="@style/NavigationHeader"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvNavigationTitle"
                style="@style/NavigationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"                
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvNavigationSubtitle"
                style="@style/NavigationHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp" 
                android:visibility="gone"/>
        </LinearLayout>        

        <Button
            android:id="@+id/btnNavigationFilterBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"    
            android:layout_marginRight="5dp"        
            android:background="@drawable/navigation_filter_selector"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btnNavigationSettingsBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/navigation_settings_selector"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btnNavigationEditBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/navigation_edit_selector"
            style="@style/NavigationHeader"
            android:textSize="12sp"
            android:textStyle="bold"
            android:visibility="gone" />
        
        <Button
            android:id="@+id/btnNavigationProfileBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/navigation_male_profile_selector"
            android:visibility="gone" />
        
    </RelativeLayout>

</merge>