<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loNavigationBar"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/im_bar_header">

    <RelativeLayout
            android:id="@+id/loLeftButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="left"
            android:visibility="visible">

        <Button
                android:id="@+id/btnNavigationHome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/navigation_home_selector"
                android:visibility="visible"/>

        <Button
                android:id="@+id/btnNavigationBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/navigation_back_selector"
                android:visibility="gone"/>

        <Button
                android:id="@+id/btnNavigationBackWithText"
                style="@style/ButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/navigation_back_profile_selector"
                android:ellipsize="end"
                android:gravity="center"
                android:maxWidth="60dp"
                android:paddingLeft="10dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:textSize="11sp"
                android:textStyle="bold"
                android:visibility="gone"/>
    </RelativeLayout>

    <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:orientation="vertical"
            android:visibility="visible">

        <TextView
                android:id="@+id/tvNavigationTitle"
                style="@style/NavigationHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:textSize="16sp"/>

        <TextView
                android:id="@+id/tvNavigationSubtitle"
                style="@style/NavigationHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:maxWidth="165dp"
                android:singleLine="false"
                android:textSize="10sp"
                android:visibility="gone"/>
    </LinearLayout>

    <RelativeLayout
            android:id="@+id/loLeftButtons"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="0.25"
            android:gravity="right"
            android:visibility="visible">

        <Button
                android:id="@+id/btnNavigationFilterBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/navigation_filter_selector"
                android:visibility="gone"/>

        <Button
                android:id="@+id/btnNavigationSettingsBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/navigation_settings_selector"
                android:visibility="gone"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp">

            <Button
                    android:id="@+id/btnNavigationRightWithText"
                    style="@style/ButtonsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/navigation_edit_selector"
                    android:maxWidth="50dp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:visibility="gone"/>

            <ProgressBar
                    android:id="@+id/prsNavigationRight"
                    style="@android:style/Widget.ProgressBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
        </RelativeLayout>

        <Button
                android:id="@+id/btnNavigationProfileBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:background="@drawable/navigation_male_profile_selector"
                android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>