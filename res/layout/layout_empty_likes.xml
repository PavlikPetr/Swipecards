<?xml version="1.0" encoding="utf-8"?>

<ViewFlipper
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/vfEmptyViews"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rate_and_have_mutual_or_buy_and_chat"
                style="@style/ItemTitleText"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvText"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="17dp"
                android:orientation="horizontal"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp">

            <Button
                    android:id="@+id/btnStartRate"
                    android:layout_width="0dip"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/start_rate"
                    style="@style/ButtonGray"
                    android:layout_marginRight="3dp"
                    android:minWidth="210dp"/>
        </LinearLayout>

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/likes_back_icon"
                android:layout_above="@id/tvText"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="18dp"/>

    </RelativeLayout>

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:gravity="center">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TODO: Title"
                />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TODO: Text"
                />

        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                src="@drawable/dating_chat"
                />

        <Button
                android:id="@+id/btnBuyVip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buying_vip_status"
                style="@style/ButtonBlue"
                android:layout_marginLeft="3dp"
                android:minWidth="210dp"/>
    </LinearLayout>
</ViewFlipper>
