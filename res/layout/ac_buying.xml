<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg_main">

    <!-- header bar -->

    <include
            android:id="@+id/loNavigationBar"
            layout="@layout/bar_navigation_header"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/loNavigationBar"
            android:layout_gravity="center_horizontal"
            android:fadeScrollbars="true"
            android:fadingEdge="none">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <!-- Resources -->


            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp"
                    android:paddingTop="12dp">

                <TextView
                        android:id="@+id/tvResourcesMoney"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:drawablePadding="4dp"
                        android:drawableRight="@drawable/resources_coins"
                        android:gravity="center"
                        android:textColor="#B5B5B5"
                        android:textSize="14sp"
                        android:textStyle="normal"/>

                <TextView
                        android:id="@+id/tvResourcesPower"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="10dp"
                        android:adjustViewBounds="true"
                        android:drawablePadding="5dp"
                        android:gravity="center"
                        android:scaleType="fitCenter"
                        android:textColor="#B5B5B5"
                        android:textSize="14sp"
                        android:textStyle="normal"/>
            </LinearLayout>

            <include layout="@layout/item_divider"/>

            <!-- Info -->

            <com.topface.topface.ui.views.IllustratedTextView
                    android:id="@+id/tvResourcesInfo"
                    style="@style/ItemTitleText"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/buying_info"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:textSize="12sp"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:singleLine="false"/>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                <!-- Power -->

                <TextView
                        style="@style/BackgroundFormTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/buying_power"
                        android:textStyle="bold"/>

                <!-- 10 000 power btn -->

                <LinearLayout
                        android:id="@+id/btnBuyingLikes"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/buying_purchase_selector"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/ButtonGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="0.5"
                            android:gravity="left|center_vertical"
                            android:text="@string/buying_recharge"/>

                    <TextView
                            style="@style/ButtonGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="12dp"
                            android:layout_weight="0.5"
                            android:gravity="right|center_vertical"
                            android:text="@string/buying_energy"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:orientation="vertical">

                <!-- Money -->

                <TextView
                        style="@style/BackgroundFormTitleText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:text="@string/buying_money"
                        android:textStyle="bold"/>


                <!-- 6 money btn -->
                <LinearLayout
                        android:id="@+id/btnBuyingMoney6"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/buying_purchase_selector"
                        android:orientation="horizontal">

                    <TextView
                            style="@style/ButtonGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_weight="0.5"
                            android:gravity="left|center_vertical"
                            android:text="@string/buying_pack_6coins"/>

                    <TextView
                            style="@style/ButtonGrayText"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="12dp"
                            android:layout_weight="0.5"
                            android:gravity="right|center_vertical"
                            android:text="@string/buying_6coins"/>
                </LinearLayout>
            </LinearLayout>

            <!-- 40 money btn -->

            <LinearLayout
                    android:id="@+id/btnBuyingMoney40"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/buying_purchase_selector"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/tvBuyingTitle40"
                        style="@style/ButtonGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="@string/buying_pack_40coins"/>

                <TextView
                        style="@style/ButtonGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="12dp"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:text="@string/buying_40coins"/>
            </LinearLayout>

            <!-- 100 money btn -->

            <LinearLayout
                    android:id="@+id/btnBuyingMoney100"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/buying_purchase_selector"
                    android:orientation="horizontal">

                <TextView
                        style="@style/ButtonGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="@string/buying_pack_100coins"
                        android:textColor="#9FCCF3"
                        android:textStyle="bold"/>

                <TextView
                        style="@style/ButtonBlueText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="12dp"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:text="@string/buying_100coins"/>
            </LinearLayout>

            <!-- 300 money btn -->

            <LinearLayout
                    android:id="@+id/btnBuyingMoney300"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/buying_purchase_selector"
                    android:orientation="horizontal">

                <TextView
                        style="@style/ButtonGrayText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="12dp"
                        android:layout_weight="0.5"
                        android:gravity="left|center_vertical"
                        android:text="@string/buying_pack_300coins"
                        android:textColor="#9FCCF3"
                        android:textStyle="bold"/>

                <TextView
                        style="@style/ButtonBlueText"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="12dp"
                        android:layout_weight="0.5"
                        android:gravity="right|center_vertical"
                        android:text="@string/buying_300coins"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <ImageView
            style="@style/HeaderShadow"/>

</RelativeLayout>