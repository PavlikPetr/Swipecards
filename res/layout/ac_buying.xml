<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/chat_list_bg">

    <!-- header bar -->
    <FrameLayout
        android:id="@+id/loNavigationBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <include layout="@layout/bar_navigation_header" />
    </FrameLayout>  
    
    <ScrollView
        android:layout_below="@id/loNavigationBar" 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fadingEdge="none"
	      android:fadeScrollbars="true"  >
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
        <!-- Resources -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
              
           <TextView
               android:id="@+id/tvResourcesMoney" 
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="center"
               android:gravity="center"
               android:textColor="#FFFFFF"
               android:textSize="12sp"
               android:textStyle="bold"
               android:text="120"
               android:drawableRight="@drawable/resources_coins"
               android:drawablePadding="4dp" />
              
			     <TextView
			         android:id="@+id/tvResourcesPower" 
			         android:layout_width="wrap_content"
			         android:layout_height="wrap_content"
			         android:layout_gravity="center"
			         android:gravity="center"
			         android:textColor="#FFFFFF"
			         android:textSize="12sp"
			         android:textStyle="bold"
			         android:text="0%"
			         android:drawableRight="@drawable/resources_battery"
               android:drawablePadding="4dp" />
			     

                  
                  <!-- 
					        <TextView
					            android:layout_width="fill_parent"
					            android:layout_height="fill_parent"
					            android:layout_marginLeft="5dp"
					            android:gravity="center"
					            android:background="@drawable/buying_selector"
					            android:textSize="13sp"
					            android:textColor="#595959"
					            android:text="@string/buying_info" /> -->
          </LinearLayout>
          
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/item_divider"/>
	        
	      <!-- Power -->
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
            android:text="@string/buying_power"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />

           
           <!-- 10 000 power btn -->
           <LinearLayout
                android:id="@+id/btnBuyingPower" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/buying_purchase_selector"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvBuyingTitlePower" 
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
                    android:textStyle="bold"
                    android:textColor="#595959"
                    android:text="@string/buying_recharge" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
                    android:textStyle="bold"
                    android:textColor="#595959"
                    android:text="@string/buying_energy" />
            </LinearLayout>
            
	         
		    <!-- Money -->
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="2dp"
		        android:textStyle="bold"
		        android:text="@string/buying_money"
		        android:textColor="#FFFFFF" />
						
		        <!-- 6 money btn -->
		        <LinearLayout
		            android:id="@+id/btnBuyingMoney6" 
                android:layout_width="fill_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/buying_purchase_selector"
		            android:orientation="horizontal">
		            <TextView
		                android:id="@+id/tvBuyingTitle6" 
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_marginLeft="10dp"
                    android:gravity="left|center_vertical"
		                android:textStyle="bold"
		                android:textColor="#595959"
		                android:text="@string/buying_pack_6coins" />
		            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:layout_marginRight="10dp"
                    android:gravity="right|center_vertical"
		                android:textStyle="bold"
		                android:textColor="#595959"
		                android:text="@string/buying_6coins" />
		        </LinearLayout>
		        
		         
		        <!-- 40 money btn -->
			        <LinearLayout
			            android:id="@+id/btnBuyingMoney40" 
                  android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:background="@drawable/buying_purchase_selector"
			            android:orientation="horizontal">
			            <TextView
			                android:id="@+id/tvBuyingTitle40" 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_weight="0.5"
                      android:layout_marginLeft="10dp"
                      android:gravity="left|center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_pack_40coins" />
			            <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_weight="0.5"
                      android:layout_marginRight="10dp"
                      android:gravity="right|center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_40coins" />
			        </LinearLayout>
		        
		        <!-- 100 money btn -->
			        <LinearLayout
			            android:id="@+id/btnBuyingMoney100" 
                  android:layout_width="fill_parent"
			            android:layout_height="wrap_content"
			            android:background="@drawable/buying_purchase_selector"
			            android:orientation="horizontal" >
			            <TextView
			                android:id="@+id/tvBuyingTitle100" 
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_weight="0.5"
                      android:layout_marginLeft="10dp"
                      android:gravity="left|center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_pack_100coins" />
			            <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="fill_parent"
                      android:layout_weight="0.5"
                      android:layout_marginRight="10dp"
                      android:gravity="right|center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_100coins" />
			        </LinearLayout>
		        
		  </LinearLayout>
	  </ScrollView>
	  
      <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/loNavigationBar"
        android:src="@drawable/im_bar_header_shadow" />
      
</RelativeLayout>