<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/list_bkgrd"
    android:orientation="vertical" >

    <!-- header bar -->
    <include layout="@layout/bar_header" />
    
    <ScrollView 
	      android:layout_width="fill_parent" 
	      android:layout_height="wrap_content"
	      android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_horizontal"
	      android:fadeScrollbars="true"  >
	    
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical" >
	        
	      <!-- Resources -->
	      <com.sonetica.topface.ui.dating.ResourcesView
	          android:layout_width="wrap_content"
	          android:layout_height="wrap_content" 
	          android:layout_marginTop="2dp"/>
	        
	      <TextView
	          android:layout_width="fill_parent"
	          android:layout_height="wrap_content"
	          android:layout_marginTop="4dp"
	          android:paddingTop="10dp"
	          android:paddingBottom="10dp"
	          android:background="@drawable/buying_selector"
	          android:gravity="center_horizontal"
	          android:textSize="13sp"
	          android:textColor="#595959"
	          android:text="@string/buying_info" />
	         
		    <!-- Money -->
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="2dp"
		        android:textStyle="bold"
		        android:text="@string/buying_money"
		        android:textColor="#FFFFFF" />
				
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:paddingTop="24dp"
		        android:paddingBottom="24dp"
		        android:background="@drawable/buying_selector"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
		
		        <!-- 6 money btn -->
		        <LinearLayout
		            android:id="@+id/btnBuyingMoney6" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/buying_btn_buy"
		            android:gravity="center" 
		            android:orientation="horizontal">
		            <TextView
		                android:id="@+id/tvBuyingTitle6" 
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:textStyle="bold"
		                android:gravity="center_vertical"
		                android:textColor="#595959"
		                android:text="@string/buying_buy" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:layout_marginLeft="8dp"
		                android:gravity="center_vertical"
		                android:textStyle="bold"
		                android:textColor="#595959"
		                android:text="@string/buying_6coins" />
		        </LinearLayout>
		        
		         
		        <!-- 40 money btn -->
		        <LinearLayout
		            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="22dp" >
			        <LinearLayout
			            android:id="@+id/btnBuyingMoney40" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/buying_btn_buy"
			            android:gravity="center" 
			            android:orientation="horizontal">
			            <TextView
			                android:id="@+id/tvBuyingTitle40" 
			                android:layout_width="wrap_content"
			                android:layout_height="fill_parent"
			                android:textStyle="bold"
			                android:gravity="center_vertical"
			                android:textColor="#595959"
			                android:text="@string/buying_buy" />
			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="fill_parent"
			                android:layout_marginLeft="8dp"
			                android:gravity="center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_40coins" />
			        </LinearLayout>
			        
			        <!-- economy 25 -->
			        <TextView
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:layout_marginTop="4dp"
			            android:paddingTop="2dp"
	                android:paddingBottom="2dp"
			            android:paddingLeft="8dp"
			            android:paddingRight="8dp"
			            android:textSize="11sp"
			            android:textStyle="bold"
			            android:background="@drawable/buying_economy_25_selector"
			            android:text="@string/buying_economy_25"
			            android:textColor="#FFFFFF" />
			        
		        </LinearLayout>
		        
		        <!-- 100 money btn -->
		        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="22dp" >
			        <LinearLayout
			            android:id="@+id/btnBuyingMoney100" 
			            android:layout_width="wrap_content"
			            android:layout_height="wrap_content"
			            android:background="@drawable/buying_btn_buy"
			            android:gravity="center" 
			            android:orientation="horizontal">
			            <TextView
			                android:id="@+id/tvBuyingTitle100" 
			                android:layout_width="wrap_content"
			                android:layout_height="fill_parent"
			                android:textStyle="bold"
			                android:gravity="center_vertical"
			                android:textColor="#595959"
			                android:text="@string/buying_buy" />
			            <TextView
			                android:layout_width="wrap_content"
			                android:layout_height="fill_parent"
			                android:layout_marginLeft="8dp"
			                android:gravity="center_vertical"
			                android:textStyle="bold"
			                android:textColor="#595959"
			                android:text="@string/buying_100coins" />
			        </LinearLayout>
			
			        <!-- economy 40 -->
			        <TextView
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="4dp"
                  android:paddingTop="2dp"
                  android:paddingBottom="2dp"
                  android:paddingLeft="8dp"
                  android:paddingRight="8dp"
                  android:textSize="11sp"
                  android:textStyle="bold"
                  android:background="@drawable/buying_economy_40_selector"
                  android:text="@string/buying_economy_40"
                  android:textColor="#FFFFFF" />
			        
		        </LinearLayout>
		        
		    </LinearLayout>
		
		    <!-- Power -->
		    <TextView
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginTop="10dp"
            android:layout_marginBottom="2dp"
		        android:text="@string/buying_power"
		        android:textStyle="bold"
		        android:textColor="#FFFFFF" />
				
		    <LinearLayout
		        android:id="@+id/linearLayout2"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
		        android:background="@drawable/buying_selector"
		        android:gravity="center_horizontal"
		        android:orientation="vertical" >
		       
		       <!-- 10 000 power btn -->
		       <LinearLayout
		            android:id="@+id/btnBuyingPower" 
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:background="@drawable/buying_btn_buy"
		            android:gravity="center" 
		            android:orientation="horizontal">
		            <TextView
		                android:id="@+id/tvBuyingTitlePower" 
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:textStyle="bold"
		                android:gravity="center_vertical"
		                android:textColor="#595959"
		                android:text="@string/buying_buy" />
		            <TextView
		                android:layout_width="wrap_content"
		                android:layout_height="fill_parent"
		                android:layout_marginLeft="8dp"
		                android:gravity="center_vertical"
		                android:textStyle="bold"
		                android:textColor="#595959"
		                android:text="@string/buying_energy" />
		        </LinearLayout>
		        
		    </LinearLayout>
		  </LinearLayout>
	  </ScrollView> 
</LinearLayout>