<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/bg_main">
    <include layout="@layout/bar_navigation_header"/>
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@id/loNavigationBar">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            >
            <!-- Фото -->
            <include
                android:id="@+id/loPhotoHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout="@layout/item_edit_profile_form_header"/>

            <include
                android:id="@+id/typePorn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <include
                android:id="@+id/typeEro"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <include
                android:id="@+id/typePicture"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <include
                android:id="@+id/typeFake"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <!-- сообщения -->
            <include
                android:id="@+id/loMsgHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout="@layout/item_edit_profile_form_header"/>

            <include
                android:id="@+id/typeSpam"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <include
                android:id="@+id/typeSwear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <!-- информация -->
            <include
                android:id="@+id/loInfoHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                layout="@layout/item_edit_profile_form_header"/>

            <include
                android:id="@+id/typeCommercial"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                    />

            <include
                android:id="@+id/typeFakeData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />

            <include
                android:id="@+id/typeSwearData"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                layout="@layout/item_edit_form_select"
                />
        </LinearLayout>

    </ScrollView>

</RelativeLayout>