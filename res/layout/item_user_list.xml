<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/loRoot"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
            android:id="@+id/ivState"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:src="@drawable/user_cell"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5dp"
            android:layout_weight="9">
        <!-- Header -->
        <TextView
                android:id="@+id/tvHeader"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textColor="#2B2B2B"
                android:textSize="22sp"
                android:layout_marginTop="3dp"
                />

        <!-- Title -->
        <TextView
                android:id="@+id/tvTitle"
                android:layout_alignParentTop="true"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="#111111"
                android:shadowColor="#666666"
                android:shadowRadius="1"
                android:shadowDx="0"
                android:shadowDy="1"
                android:textSize="10sp"
                />

        <LinearLayout
                android:layout_below="@id/tvTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <!-- Value -->
            <TextView
                    android:id="@+id/tvValue"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:shadowColor="#888888"
                    android:shadowRadius="1"
                    android:shadowDx="0"
                    android:shadowDy="-1"
                    android:paddingRight="8dp"
                    android:layout_marginTop="-4dp"
                    android:layout_marginBottom="5dp"
                    />

            <Button
                    android:id="@+id/btnFill"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/profile_fill_selector"
                    android:text="@string/general_fill_button"
                    android:textSize="13sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:visibility="gone"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>