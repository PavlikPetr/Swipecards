<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:topface="http://schemas.android.com/apk/res/com.topface.topface"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:id="@+id/layout">

    <!-- avatar -->
    <com.topface.topface.ui.views.RoundedImageView
            topface:frame="chat"
            android:id="@+id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="3dp"
            android:visibility="visible"/>

    <LinearLayout android:id="@+id/user_info"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@id/left_icon"
                  android:layout_marginRight="4dp"
                  android:background="@drawable/bg_message_friend"
                  android:orientation="vertical">

        <!-- message -->
        <TextView
                android:id="@+id/chat_message"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="#4c4c4c"/>

        <!-- date -->
        <TextView
                android:id="@+id/chat_date"
                android:textColor="#b4b4b4"
                android:textSize="12sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/chat_gift"
            android:layout_toRightOf="@id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

</RelativeLayout>    
