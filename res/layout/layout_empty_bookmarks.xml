<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

    <ImageView
            android:id="@+id/ivBookmarksExample"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_bookmark_example"
            android:layout_centerInParent="true"/>

    <TextView
            android:layout_width="wrap_content"
            android:maxWidth="200dp"
            android:layout_height="wrap_content"
            android:text="@string/add_bookmarks_to_be_connected"
            android:layout_above="@+id/ivBookmarksExample"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_marginBottom="16dp"/>

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add_bookmark_arrow_example"
            android:layout_toLeftOf="@id/ivBookmarksExample"
            android:layout_alignTop="@id/ivBookmarksExample"
            android:layout_marginTop="-16dp"
            android:layout_marginRight="8dp"/>
</RelativeLayout>