<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <com.topface.topface.ui.views.ImageViewRemote
            android:id="@+id/ivPhoto"
            xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
            ivr:postProcessor="mask"
            ivr:clipMask="@drawable/user_mask_album"
            android:scaleType="centerInside"
            android:background="@drawable/user_frame_album_center"
            android:layout_width="98dp"
            android:layout_height="105.5dp"
            android:paddingLeft="0.5dp"
            android:paddingRight="0.5dp"
            android:layout_centerInParent="true"/>

    <ImageView
            android:id="@+id/ivSelector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/edit_form_select_check"
            android:visibility="gone"/>

    <Button
        android:id="@+id/btnSetAsMain"
        style="@style/ButtonsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:background="@drawable/edit_btn_set_as_main_selector"  
        android:text="@string/edit_set_as_main"   
        />
    
    <Button
        android:id="@+id/btnDeletePhoto"
        style="@style/ButtonsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:background="@drawable/edit_btn_delete_photo_selector"        
        android:text="@string/edit_delete"
        />

</RelativeLayout>