<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_dashboard"
    android:orientation="vertical" >
	<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:id="@+id/tblBoard"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_centerInParent="true" >
    <TableRow
        android:layout_marginTop="14pt">
      <ImageButton
          android:id="@+id/btnDashbrdPhotorating"
          android:src="@drawable/im_dashbrd_star"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <ImageButton
          android:id="@+id/btnDashbrdLikeme"
          android:src="@drawable/im_dashbrd_heart"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <ImageButton
          android:id="@+id/btnDashbrdMyrating"
          android:src="@drawable/im_dashbrd_stars"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_photorating"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_likeme"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_myrating"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </TableRow>
    <TableRow
        android:layout_marginTop="0pt">
      <Button
          android:id="@+id/btnDashbrdChat"
          android:drawableBottom="@drawable/im_dashbrd_chat"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <Button
          android:id="@+id/btnDashbrdTops"
          android:drawableBottom="@drawable/im_dashbrd_top"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <Button
          android:id="@+id/btnDashbrdProfile"
          android:drawableBottom="@drawable/im_dashbrd_profile"
          android:background="@android:color/transparent"
          android:layout_margin="2pt"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </TableRow>
    <TableRow>
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_chats"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_tops"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
        <TextView
          android:textColor="#606060"
          android:text="@string/dashbrd_btn_profile"
          android:layout_gravity="center"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
    </TableRow>
  </TableLayout>

	<!-- banner bar -->
	<RelativeLayout 
	    android:layout_width="fill_parent" 
	    android:layout_height="wrap_content" 
	    android:layout_alignParentBottom="true">
    <include layout="@layout/banner_bar" />
  </RelativeLayout>
</RelativeLayout>