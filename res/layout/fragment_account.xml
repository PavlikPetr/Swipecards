<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
 >
    <include
            layout="@layout/bar_navigation_header"
            android:id="@+id/loNavigationBar"/>

    <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:id="@+id/acContainer"
                  android:layout_below="@id/loNavigationBar"
            >
        <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/im_btn_like_bg">

            <TextView
                    android:id="@+id/tvName"
                    style="@style/ItemTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="5dp"/>
        </RelativeLayout>

        <Button
                android:id="@+id/btnLogout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/buying_purchase_selector"
                android:text="@string/settings_logout"
                style="@style/ItemtText"
                android:textSize="16sp"
                android:textStyle="bold"
                />

    </LinearLayout>

    <Button
            android:id="@+id/btnLogout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/buying_purchase_selector"
            android:text="@string/settings_logout"
            style="@style/ItemtText"
            android:textSize="16sp"
            android:textStyle="bold"
            />

    <ImageView style="@style/HeaderShadow"/>

    <com.topface.topface.ui.views.LockerView
            android:id="@+id/llvLogoutLoading"
            style="@style/LoadingLocker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"/>
</RelativeLayout>