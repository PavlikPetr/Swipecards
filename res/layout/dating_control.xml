<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/loDatingGroup"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="invisible" >

        <!-- Resources -->

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp" >

            <include layout="@layout/resources_dating" />
        </RelativeLayout>

        <!-- Rating hearts -->

        <LinearLayout
            android:id="@+id/ratingButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal" >

            <RelativeLayout
                android:id="@+id/loDatingLove"
                android:layout_weight="1.0"                
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"                
                android:background="@android:color/transparent">

                <Button
                    android:id="@+id/btnDatingLove"
                    style="@style/DatingButtonsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableTop="@drawable/dating_delight_selector"
                    android:text="@string/dashbrd_btn_love"
                    />

                <TextView
                    android:id="@+id/tvDatingLovePrice"
                    style="@style/DatingButtonsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"                    
                    android:background="@android:color/transparent"                    
                    android:drawableRight="@drawable/coins"                    
                    android:text="@integer/love_dating_button"
                    />
            </RelativeLayout>

            <Button
                android:id="@+id/btnDatingSympathy"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_mutual_selector"
                android:text="@string/dashbrd_btn_sympathy" />

            <Button
                android:id="@+id/btnDatingPrev"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_prev_selector"
                android:text="@string/dashbrd_btn_prev"/>
            
            <Button
                android:id="@+id/btnDatingSkip"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_skip_selector"
                android:text="@string/dashbrd_btn_skip" />

            <Button
                android:id="@+id/btnDatingChat"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_chat_selector"
                android:text="@string/profile_btn_chat" />

            <Button
                android:id="@+id/btnDatingProfile"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_man_selector"
                android:text="@string/dashbrd_btn_profile" />
        </LinearLayout>

        <!-- User info -->

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ratingButtons"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="6dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvDatingUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/im_offline"
                android:shadowColor="#666666"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.2"
                android:textColor="#FFFFFF"
                android:textSize="28sp" />

            <TextView
                android:id="@+id/tvDatingUserStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxWidth="200dp"
                android:shadowColor="#666666"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1.2"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvDatingUserCity"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:textSize="14sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDatingCounter"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/ratingButtons"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="6dp"
            android:drawablePadding="3dp"
            android:drawableRight="@drawable/user_photo_small"
            android:gravity="bottom"
            android:textSize="14sp" />
    </RelativeLayout>

</merge>