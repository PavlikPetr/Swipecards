<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

    <TextView
            android:tag="tvTitle"
            style="@style/ItemTitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:drawablePadding="5dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"/>

    <!-- Switch -->

    <CheckBox
            android:tag="cbSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/edit_switch"
            android:button="@android:color/transparent"
            android:layout_marginRight="10dp"

            android:clickable="false"/>

    <ProgressBar
            android:tag="vsiLoadBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            style="@android:style/Widget.ProgressBar.Small"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            />

    <TextView
            android:tag="tvSwitchOn"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignRight="@id/cbSwitch"
            android:layout_centerVertical="true"
            android:layout_marginRight="12dp"
            android:text="@string/settings_switch_on"
            android:textSize="12sp"/>

    <TextView
            android:tag="tvSwitchOff"
            android:textColor="#2F2F2F"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cbSwitch"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:text="@string/settings_switch_off"
            android:textSize="12sp"/>

</RelativeLayout>