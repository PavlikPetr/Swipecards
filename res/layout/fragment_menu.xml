<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <!-- Profile -->
        <RelativeLayout
                android:id="@+id/btnProfileLayout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="7dp"
                android:background="@drawable/navigation_menu_item_selector"
                android:addStatesFromChildren="true">

            <com.topface.topface.ui.views.ImageViewRemote
                    xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
                    ivr:postProcessor="mask"
                    ivr:clipMask="@drawable/frame_menu_mask"
                    android:background="@drawable/frame_menu_selector"
                    android:id="@+id/ivMenuAvatar"
                    android:src="@drawable/topface_male_profile_button"
                    android:layout_centerVertical="true"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

            <Button
                    android:id="@+id/btnFragmentProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/ivMenuAvatar"
                    android:layout_centerVertical="true"
                    android:text="@string/general_profile"
                    android:paddingLeft="12dp"
                    android:background="@android:color/transparent"
                    style="@style/LeftMenuButtons"/>

            <ImageView
                    android:id="@+id/rocket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_rocket_small"
                    android:layout_marginLeft="185dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />
            <ImageView
                    android:id="@+id/noData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_not_enough_data"
                    android:layout_marginLeft="185dp"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    />
        </RelativeLayout>

        <!-- Dating -->
        <Button
                android:id="@+id/btnFragmentDating"
                android:layout_below="@id/btnProfileLayout"
                android:text="@string/general_dating"
                android:drawableLeft="@drawable/ic_dating"
                style="@style/LeftMenuButtons"/>

        <!-- Likes -->
        <Button
                android:id="@+id/btnFragmentLikes"
                android:layout_below="@id/btnFragmentDating"
                android:text="@string/general_likes"
                android:drawableLeft="@drawable/topface_likes"
                style="@style/LeftMenuButtons"/>

        <!-- UNREAD LIKES -->
        <TextView
                android:id="@+id/tvNotifyLikes"
                android:layout_alignBaseline="@+id/btnFragmentLikes"
                style="@style/Informer"/>

        <!-- Mutual - Sympathy -->
        <Button
                android:id="@+id/btnFragmentMutual"
                android:layout_below="@id/btnFragmentLikes"
                android:text="@string/general_mutual"
                android:drawableLeft="@drawable/topface_sympathy"
                style="@style/LeftMenuButtons"/>

        <!-- UNREAD MUTUAL -->
        <TextView
                android:id="@+id/tvNotifyMutual"
                android:layout_alignBaseline="@id/btnFragmentMutual"
                style="@style/Informer"/>

        <!-- Dialogs - Messages - Chat -->
        <Button
                android:id="@+id/btnFragmentDialogs"
                android:layout_below="@id/btnFragmentMutual"
                android:text="@string/general_dialogs"
                android:drawableLeft="@drawable/ic_dialog"
                style="@style/LeftMenuButtons"/>

        <!-- UNREAD DIALOGS -->
        <TextView
                android:id="@+id/tvNotifyDialogs"
                android:layout_alignBaseline="@+id/btnFragmentDialogs"
                style="@style/Informer"/>

        <!--Bookmarks-->
        <Button
            android:id="@+id/btnFragmentBookmarks"
            android:layout_below="@id/btnFragmentDialogs"
            android:text="@string/general_bookmarks"
            android:drawableLeft="@drawable/ic_star"
            style="@style/LeftMenuButtons"
            />
        <!--Fans-->
        <Button
                android:id="@+id/btnFragmentFans"
                android:layout_below="@id/btnFragmentBookmarks"
                android:text="@string/general_fans"
                android:drawableLeft="@drawable/ic_fans"
                style="@style/LeftMenuButtons"
                />
        <TextView
                android:id="@+id/tvNotifyFans"
                android:layout_alignBaseline="@id/btnFragmentFans"
                style="@style/Informer"/>

        <!-- Visitors -->
        <Button
                android:id="@+id/btnFragmentVisitors"
                android:layout_below="@id/btnFragmentFans"
                android:text="@string/general_visitors"
                android:drawableLeft="@drawable/topface_guests"
                style="@style/LeftMenuButtons"/>

        <TextView
                android:id="@+id/tvNotifyVisitors"
                android:layout_alignBaseline="@+id/btnFragmentVisitors"
                style="@style/Informer"/>
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/btnFragmentVisitors"
            android:background="@drawable/counters_background"
        >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                                    android:id="@+id/countersLayout"
                    android:padding="10dp"
                    android:layout_alignParentLeft="true"
                    >

                <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >


                        <com.topface.topface.ui.views.ServicesTextView xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                                                                       android:id="@+id/menuCurCoins"
                                                                       stv:maxChars="5"
                                                                       stv:charPadding="7"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       stv:fontSize="16"
                                                                       android:layout_alignParentLeft="true"
                                                                       stv:image="@drawable/ic_coins"
                                />
                        <com.topface.topface.ui.views.ServicesTextView xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                                                                       android:id="@+id/menuCurLikes"
                                                                       stv:maxChars="5"
                                                                       stv:charPadding="7"
                                                                       android:layout_width="wrap_content"
                                                                       android:layout_height="wrap_content"
                                                                       stv:fontSize="16"
                                                                       android:layout_alignParentRight="true"
                                                                       stv:image="@drawable/ic_sympathy"
                                />
                </RelativeLayout>

                <Button
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:background="@drawable/btn_blue_selector"
                        android:text="@string/buy_resources"
                        android:textStyle="bold"
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginRight="8dp"
                        android:id="@+id/menuBuyBtn"
                        />

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>