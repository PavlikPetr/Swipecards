<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:background="@android:color/transparent"
                android:id="@+id/layout">

    <LinearLayout
            android:id="@+id/user_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/left_icon"
            android:layout_marginLeft="4dp"
            android:background="@drawable/bg_message_user_ext"
            android:orientation="vertical">

        <!-- message -->
        <TextView
                android:id="@+id/chat_message"
                android:text="@string/chat_likes_virus_message"
                style="@style/chat_message"/>

        <!-- date -->
        <TextView
                android:id="@+id/chat_date"
                android:textColor="#acc2d8"
                android:textSize="12sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"/>

        <Button
                android:id="@+id/btn_chat_like_request"
                android:text="@string/chat_virus_btn"
                style="@style/LikeRequestButton"/>
    </LinearLayout>

    <ImageView
            android:id="@+id/chat_gift"
            android:layout_toLeftOf="@id/left_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

    <!-- avatar -->
    <com.topface.topface.ui.views.ImageViewRemote
            android:id="@+id/left_icon"
            style="@style/ChatAvatarInvisible"/>

</RelativeLayout>    
