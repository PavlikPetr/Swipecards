<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/bg_main"
        >
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/fbpContainer"
            android:padding="5dp"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_not_activated"
                style="@style/TitleWhiteText"
                android:layout_margin="5dp"
                />
        <RelativeLayout
                android:id="@+id/fbpBuyingMonth"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_vip_sale_selector"
                android:padding="5dp"
                android:layout_margin="5dp"
                >
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/vip_one_month_title"
                    style="@style/ButtonGrayText"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingRight="5dp"
                    style="@style/ButtonGrayText"
                    android:text="@string/vip_one_month_value"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>
        <RelativeLayout
                android:id="@+id/fbpBuyingYear"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_vip_super_sale_selector"
                android:padding="5dp"
                android:layout_margin="5dp"
                >
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/vip_one_year_title"
                    android:paddingLeft="5dp"
                    style="@style/ButtonGrayText"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    />
            <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:paddingRight="5dp"
                    android:text="@string/vip_one_year_value"
                    style="@style/ButtonGrayText"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    />
        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vip_privileges"
                style="@style/TitleWhiteText"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                />

        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vip_separator"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_vip_invisible"
                android:text="@string/vip_text_visitors"
                style="@style/VipItemTitleWhiteText"
                />
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vip_separator"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_vip_unlock"
                android:text="@string/vip_text_adm_unlock"
                style="@style/VipItemTitleWhiteText"
                />
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vip_separator"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_vip_blacklist"
                android:text="@string/vip_text_adm_unlock"
                style="@style/VipItemTitleWhiteText"
                />
        <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/vip_separator"
                />
        <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_vip_dialog"
                android:text="@string/vip_text_adm_unlock"
                style="@style/VipItemTitleWhiteText"
                />
    </LinearLayout>
</ScrollView>