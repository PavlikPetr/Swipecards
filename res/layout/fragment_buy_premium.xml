<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:background="@drawable/bg_main"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/fbpContainer"
                android:padding="5dp"
                >
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vip_not_activated"
                    style="@style/TitleWhiteText"
                    android:layout_margin="5dp"
                    />
            <TextView
                    android:id="@+id/fbpBuyingDisabled"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    style="@style/TitleWhiteText"
                    android:text="@string/general_buying_disabled"
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    />
            <LinearLayout
                android:id="@+id/fbpBtnContainer"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                ></LinearLayout>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/vip_privileges"
                    style="@style/TitleWhiteText"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="10dp"
                    />

            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_separator"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_vip_invisible"
                    android:text="@string/vip_info_guest"
                    style="@style/VipItemTitleWhiteText"
                    />
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_separator"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_vip_unlock"
                    android:text="@string/vip_info_delight"
                    style="@style/VipItemTitleWhiteText"
                    />
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_separator"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_vip_blacklist"
                    android:text="@string/vip_info_blackList"
                    style="@style/VipItemTitleWhiteText"
                    />
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vip_separator"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/ic_vip_dialog"
                    android:text="@string/vip_info_message"
                    style="@style/VipItemTitleWhiteText"
                    />
        </LinearLayout>
        <LinearLayout
                android:id="@+id/editPremiumContainer"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                >
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    >
                <TextView
                        android:id="@+id/fepVipRest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="@style/TitleWhiteText"
                        android:text="@string/vip_rest"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        />
                <ImageButton
                        android:id="@+id/fepVipEdit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_vip_edit"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        />
            </RelativeLayout>

            <include
                    android:id="@+id/fepInvis"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="20dp"
                    layout="@layout/vip_item_edit_form_switch"/>

            <include
                    android:id="@+id/fepBlackList"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    layout="@layout/vip_item_edit_form_select"/>
            <include
                    android:id="@+id/fepProfileBG"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    layout="@layout/vip_item_edit_form_select"/>


        </LinearLayout>
    </LinearLayout>
</ScrollView>