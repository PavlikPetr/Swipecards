<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android"
        >

    <style name="ShadowItemFont">
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
    </style>

    <style name="ShadowItemFontBottom">
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="ShadowButtonFont">
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">-2</item>
    </style>

    <style name="ShadowUserText">
        <item name="android:shadowColor">#606060</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="ShadowDatingButtons">
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.2</item>
    </style>

    <style name="BackgroundTitleText" parent='ShadowUserText'>
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BackgroundFormTitleText" parent='ShadowUserText'>
        <item name="android:id">@+id/tvTitle</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemTitleText" parent="ShadowItemFont">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ButtonGrayText" parent="ItemTitleText">
        <item name="android:textColor">#B5B5B5</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TitleWhiteText" parent="ItemTitleText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="VipItemTitleWhiteText">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>

    <style name="ButtonBlueText" parent="ButtonGrayText">
        <item name="android:textColor">#9FCCF3</item>
    </style>

    <style name="ItemtText" parent="ShadowItemFont">
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="DatingButtonsText" parent="ShadowDatingButtons">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">9sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textScaleX">0.9</item>
    </style>

    <style name="ProfileButtonsText" parent="ShadowDatingButtons">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textScaleX">0.9</item>
    </style>

    <style name="ButtonsText" parent="ShadowUserText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="NotificationText" parent="ShadowUserText">
        <item name="android:textSize">9sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="EditPhotoButtonsText" parent="ButtonsText">
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LeftMenuButtons">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/navigation_menu_item_selector</item>
    </style>

    <style name="LoadingLocker">
        <item name="android:paddingTop">14dp</item>
        <item name="android:text">@string/general_dialog_loading</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#55000000</item>
        <item name="android:drawableLeft">@drawable/loader</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="SavingLocker" parent="LoadingLocker">
        <item name="android:text">@string/general_dialog_saving</item>
    </style>

    <style name="BackgroundFont" parent="ShadowItemFont">
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="EditAvatar">
        <item name="postProcessor">rounded</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:background">@drawable/avatar_frame</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">5dp</item>
    </style>

    <style name="FeedAvatar">
        <item name="postProcessor">rounded</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:background">@drawable/im_avatar_list_frame</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingBottom">1.5dp</item>
    </style>

    <style name="HeaderShadow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/loNavigationBar</item>
        <item name="android:background">@drawable/im_bar_header_shadow</item>
    </style>


    <style name="OnlineIndicator">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:src">@drawable/list_online_selector</item>
        <item name="android:visibility">invisible</item>
    </style>
    
    <style name="OnlineIndicatorStatic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:src">@drawable/im_list_online_pressed</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ListArrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:src">@drawable/im_item_arrow</item>
    </style>

    <style name="ListTime">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListMessageText" parent="ShadowItemFont">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#B8B8B8</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListCity" parent="ShadowItemFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="ListAgeAndCity" parent="ListCity">
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">0dp</item>
    </style>

    <style name="ListName" parent="ShadowItemFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="NavigationHeader" parent="ShadowUserText">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="FeedHeart">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_toLeftOf">@+id/ivArrow</item>
        <item name="android:src">@drawable/im_item_mutual_heart</item>
    </style>

    <style name="ChatAvatar">
        <item name="android:background">@drawable/chat_avatar_frame</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">37dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="postProcessor">rounded</item>
    </style>

    <style name="ChatAvatarInvisible" parent="ChatAvatar">
        <item name="android:visibility">invisible</item>
    </style>

    <style name="ChatFriendAvatar" parent="ChatAvatar">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>

    <style name="ChatFriendAvatarInvisible" parent="ChatAvatarInvisible">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentRight">false</item>
    </style>

    <style name="Gift">
        <item name="postProcessor">rounded</item>
        <item name="android:layout_width">97dp</item>
        <item name="android:layout_height">99dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_marginBottom">3dp</item>
        <item name="android:background">@drawable/chat_gift_frame</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="Informer" parent="ShadowItemFontBottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginLeft">210dp</item>
        <item name="android:background">@drawable/im_informer</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="BackButton" parent="android:Widget.ImageButton">
        <item name="android:src">@drawable/navigation_back_selector</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="chat_message">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#527b94</item>
    </style>

    <style name="chat_message.friend">
        <item name="android:textColor">#4c4c4c</item>
    </style>

    <style name="ProfileAvatar">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:paddingTop">0.5dp</item>
        <item name="android:paddingLeft">0.5dp</item>
        <item name="android:paddingRight">0.5dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:background">@drawable/avatar_frame_center</item>
    </style>

    <!-- Page indicators -->
    <style name="Theme.TopfaceIndicators" parent="android:Theme.Light.NoTitleBar">
        <item name="vpiIconPageIndicatorStyle">@style/Widget.TopfaceIconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TopfaceTabPageIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/TopfaceCirclePageIndicator</item>
    </style>

    <style name="TopfaceCirclePageIndicator">
        <item name="pageColor">#99FFFFFF</item>
        <item name="fillColor">#FFFFFFFF</item>
        <item name="strokeWidth">0dp</item>
        <item name="radius">3dp</item>
        <item name="centered">true</item>
    </style>

    <style name="Widget.TopfaceTabPageIndicator" parent="Widget">
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/topface_tab_indicator</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textAppearance">@style/TextAppearance.TopfaceTabPageIndicator</item>
        <item name="android:textSize">12sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.TopfaceTabPageIndicator" parent="Widget">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/vpi__dark_theme</item>
    </style>

    <style name="Widget.TopfaceIconPageIndicator" parent="Widget">
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

</resources>