<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:test="http://schemas.android.com/apk/res/com.topface.topface.ui.views.LockerView">

    <style name="ShadowItemFont">
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">-2</item>
    </style>

    <style name="ShadowButtonFont">
        <item name="android:shadowColor">#222222</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">-2</item>
    </style>
    
    <style name="ShadowUserText">
        <item name="android:shadowColor">#606060</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
    </style>
    
    <style name="ShadowDatingButtons">
        <item name="android:shadowColor">#666666</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">1.2</item>
    </style>

    <style name="BackgroundTitleText" parent='ShadowUserText'>
        <item name="android:textColor">#2F2F2F</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="ItemTitleText" parent="ShadowItemFont">
    	<item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="ItemtText" parent="ShadowItemFont">
    	<item name="android:textColor">#B8B8B8</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>
    
    <style name="DatingButtonsText" parent="ShadowDatingButtons">        
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">9sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textScaleX">0.9</item>
    </style>
    
    <style name="ProfileButtonsText" parent="ShadowDatingButtons">        
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">10sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textScaleX">0.9</item>
    </style>

    <style name="NavigationHeader" parent="ShadowUserText">
        <item name="android:textColor">#FFFFFF</item>        
    </style>
    
    <style name="LeftMenuButtons">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:drawablePadding">5dp</item>
    </style>
    
    <style name="LoadingLocker">
        <item name="android:paddingTop">20px</item>
        <item name="android:text">@string/general_dialog_loading</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#55000000</item>
        <item name="android:drawableLeft">@drawable/loader</item>
    </style>
    
    <style name="SavingLocker" parent="LoadingLocker">
        <item name="android:text">@string/general_dialog_saving</item>
    </style>

    <style name="BackgroundFont" parent="ShadowItemFont">
        <item name="android:textColor">#737373</item>
        <item name="android:textSize">17sp</item>
    </style>

    <style name="FeedAvatar">
        <item name="postProcessor">rounded</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_width">62dp</item>
        <item name="android:layout_height">62dp</item>
        <item name="android:background">@drawable/im_avatar_list_frame</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingLeft">1dp</item>
        <item name="android:paddingRight">1dp</item>
        <item name="android:paddingBottom">1.5dp</item>
    </style>
    
</resources>