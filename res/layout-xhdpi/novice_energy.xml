<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY"/>

    <ImageView
	        android:id="@+id/ivMask"
	        android:layout_width="67dp"
	        android:layout_height="51.5dp"
	        android:layout_alignParentTop="true"
	        android:layout_alignParentLeft="true"
	        android:src="@drawable/tip_energy_mask"
	        android:layout_marginTop="22dp"/>
    
	<ImageView
	        android:id="@+id/ivArrow"
	        android:layout_width="172.5dp"
	        android:layout_height="290dp"
	        android:layout_toRightOf="@id/ivMask"
	        android:layout_alignParentTop="true"
	        android:src="@drawable/tip_energy_arrow"
	        android:layout_marginTop="75dp"
	        android:layout_marginLeft="-10dp"/>
	
    <com.topface.topface.ui.views.AutoResizeTextView
        android:id="@+id/ivBubble"
        android:layout_width="303.5dp"
        android:layout_height="153.5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivArrow"
        android:background="@drawable/tip_energy_bubble"
        android:gravity="center"
        android:lines="4"
        android:text="@string/novice_energy"
        android:textColor="#000000"
        android:textSize="20sp"
        android:paddingTop="20dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"/>

</RelativeLayout>