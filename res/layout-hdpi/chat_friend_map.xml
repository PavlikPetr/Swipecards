<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <!-- avatar -->

    <com.topface.topface.ui.views.ImageViewRemote
            android:id="@+id/left_icon"
            style="@style/ChatFriendAvatar"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/left_icon"
            android:background="@drawable/chat_item_map_bg"
            android:padding="13dp"
            android:orientation="vertical">

        <ImageView
                android:id="@+id/ivFriendMapBg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/chat_item_map"/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tvChatMapTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#000000"/>

            <ProgressBar
                    android:id="@+id/prgsFriendMapAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>