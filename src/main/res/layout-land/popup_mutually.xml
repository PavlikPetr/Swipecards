<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.dating.PopupMutualViewModel"/>
    </data>

    <LinearLayout
        style="@style/PopupMutualRootContainer">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/icCircle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/avatarUser"
                    android:layout_marginBottom="20dp"
                    android:layout_marginRight="90dp"
                    android:layout_toLeftOf="@id/icPen"
                    android:src="@drawable/stroke_1"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="16dp"
                    android:layout_above="@id/avatarUser"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@id/icCircle"
                    android:src="@drawable/envelop"/>

                <!--Ты сам-->
                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_above="@id/icArrow"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="56dp"
                    android:layout_toRightOf="@id/icArrow"
                    android:src="@drawable/girl_blur_6"
                    app:glideTransformationPhoto="@{model.userPhoto}"
                    app:placeholderRes="@{model.userPlaceholderRes}"
                    app:typeTransformation="@{model.type}"/>

                <!--Кто-то, кому ты не безразличен-->
                <ImageView
                    android:id="@+id/avatarUser"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_above="@id/icArrow"
                    android:layout_marginBottom="16dp"
                    android:layout_marginRight="24dp"
                    android:layout_toLeftOf="@id/icPen"
                    android:src="@drawable/man_blur_5"
                    app:glideTransformationPhoto="@{model.mutualUserPhoto}"
                    app:placeholderRes="@{model.mutualPlaceholderRes}"
                    app:typeTransformation="@{model.mutualType}"
                    app:outSideCircle="@{model.outsideCircle}"/>

                <ImageView
                    android:id="@+id/icArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="57dp"
                    android:src="@drawable/arrow_to_left"/>

                <ImageView
                    android:id="@+id/mutualIC"
                    android:layout_width="74dp"
                    android:layout_height="74dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="60dp"
                    android:layout_marginLeft="111dp"
                    android:src="@drawable/ic_mutually"/>

                <ImageView
                    android:id="@+id/icPen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="70dp"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@id/mutualIC"
                    android:src="@drawable/pen"/>
            </RelativeLayout>
        </FrameLayout>

        <LinearLayout
            style="@style/PopupLandRightContainer">


            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="right"
                android:layout_marginTop="18dp"
                android:onClick="@{() -> viewModel.closePopup()}"
                android:src="@drawable/skip"/>

            <TextView
                android:id="@+id/popupTitle"
                style="@style/PopupTitle"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="83dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/mutual_popup_you_get_mutual"/>

            <Button
                android:id="@+id/btnChangeFilterDating"
                style="@style/PopupGreenButton.Background"
                android:layout_below="@+id/avatarUser"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:onClick="@{() -> viewModel.startDialog()}"
                android:text="@string/start_dialog"
                android:textAllCaps="true"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnClearFilterDating"
                style="@style/PopupBorderlessdButton"
                android:layout_below="@id/btnChangeFilterDating"
                android:layout_centerHorizontal="true"
                android:onClick="@{() -> viewModel.closePopup()}"
                android:text="@string/continue_to_meet"/>
        </LinearLayout>


    </LinearLayout>
</layout>