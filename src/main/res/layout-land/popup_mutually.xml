<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.topface.topface.ui.fragments.dating.PopupMutualViewModel"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white">

        <ImageView
            android:id="@+id/icCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/avatarUser"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="90dp"
            android:layout_toLeftOf="@+id/icPen"
            android:src="@drawable/stroke_1"/>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="16dp"
            android:layout_above="@id/avatarUser"
            android:layout_marginBottom="16dp"
            android:layout_toRightOf="@id/icCircle"
            android:src="@drawable/envelop"/>

        <!--Ты сам-->
        <ImageView
            android:id="@+id/avatarUserPhoto"
            android:layout_width="@dimen/mutual_popup_avatar"
            android:layout_height="@dimen/mutual_popup_avatar"
            android:layout_above="@id/icArrow"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@id/icArrow"
            android:src="@drawable/girl_blur_6"
            app:animationSrc="@{@anim/mutual_popup_right}"
            app:glideTransformationPhoto="@{model.userPhoto}"
            app:outSideCircle="@{model.outsideCircle}"
            app:placeholderRes="@{model.userPlaceholderRes}"
            app:typeTransformation="@{model.type}"/>

        <!--Кто-то, кому ты не безразличен-->
        <ImageView
            android:id="@+id/avatarUser"
            android:layout_width="@dimen/mutual_popup_avatar"
            android:layout_height="@dimen/mutual_popup_avatar"
            android:layout_above="@id/icArrow"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="34dp"
            android:layout_toLeftOf="@id/icPen"
            android:src="@drawable/man_blur_5"
            app:animationSrc="@{@anim/mutual_popup_left}"
            app:glideTransformationPhoto="@{model.mutualUserPhoto}"
            app:outSideCircle="@{model.outsideCircle}"
            app:placeholderRes="@{model.mutualPlaceholderRes}"
            app:typeTransformation="@{model.type}"/>

        <ImageView
            android:id="@+id/icArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/mutualIC"
            android:layout_toLeftOf="@id/mutualIC"
            android:layout_marginRight="33dp"
            android:src="@drawable/arrow_to_left"/>

        <FrameLayout
            android:id="@+id/viewForLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="invisible"></FrameLayout>

        <ImageView
            android:id="@+id/mutualIC"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_below="@id/viewForLayout"
            android:layout_marginTop="50dp"
            android:layout_toLeftOf="@id/viewForLayout"
            android:layout_marginRight="120dp"
            android:src="@drawable/ic_mutually"/>

        <ImageView
            android:id="@+id/icPen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/avatarUserPhoto"
            android:layout_alignBottom="@id/mutualIC"
            android:layout_toLeftOf="@id/viewForLayout"
            android:layout_marginRight="80dp"
            android:src="@drawable/pen"/>

        <ImageView
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="18dp"
            android:onClick="@{() -> model.closePopup()}"
            android:src="@drawable/skip"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/viewForLayout"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <TextView
                android:id="@+id/popupTitle"
                style="@style/MutualPopupTitle"
                android:ellipsize="end"
                android:text="@string/mutual_popup_you_get_mutual"/>

            <Button
                android:id="@+id/btnChangeFilterDating"
                style="@style/PopupGreenButton.Background"
                android:layout_marginTop="10dp"
                android:onClick="@{() -> model.startDialog()}"
                android:text="@string/start_dialog"
                android:textAllCaps="true"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/btnClearFilterDating"
                style="@style/PopupBorderlessButton"
                android:onClick="@{() -> model.closePopup()}"
                android:text="@string/continue_to_meet"/>
        </LinearLayout>
    </RelativeLayout>

</layout>