<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="LeftMenuTitile" parent="LeftMenuTitleBase">
        <item name="android:layout_marginStart">@dimen/left_menu_title_margin_left</item>
    </style>

    <style name="LeftMenuBadge" parent="LeftMenuBadgeBase">
        <item name="android:layout_marginEnd">@dimen/left_menu_item_padding_right</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>

    <style name="LeftMenuHeader" parent="LeftMenuHeaderBase">
        <item name="android:paddingStart">@dimen/left_menu_header_pading_left</item>
        <item name="android:paddingEnd">@dimen/left_menu_header_pading_right</item>
    </style>

    <style name="OfferwallItem" parent="OfferwallItemBase">
        <item name="android:paddingStart">@dimen/offerwall_item_padding_left</item>
        <item name="android:paddingEnd">@dimen/offerwall_item_padding_right</item>
    </style>

    <style name="OfferwallsText" parent="OfferwallsTextBase">
        <item name="android:paddingStart">@dimen/offerwalls_text_padding_left</item>
    </style>

    <style name="OfferwallsButton" parent="OfferwallsButtonBase">
        <item name="android:drawableEnd">@drawable/ic_pay</item>
        <item name="android:paddingEnd">@dimen/offerwalls_button_padding_right</item>
        <item name="android:layout_marginStart">@dimen/offerwalls_button_margin_left</item>
        <item name="android:gravity">center_vertical|end</item>
    </style>

    <style name="AlbumGift" parent="AlbumGiftBase">
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">@dimen/album_gift_margin_right</item>
    </style>

</resources>