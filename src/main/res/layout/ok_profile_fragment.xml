<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="handler"
            type="com.topface.topface.ui.fragments.OkProfileFragment.OkProfileHandler" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:id="@+id/rootControlView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{handler.rootVisibility}">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="36dp">

                <com.topface.topface.ui.views.ImageViewRemote
                    android:id="@+id/okProfileAvatar"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:visibility="@{handler.avatarVisibility}"
                    app:postProcessor="inscribedAvatar"
                    app:remoteSrc="@{handler.imageSrc}" />

                <TextView
                    android:id="@+id/okProfileName"
                    style="@style/OkProfileUserName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{handler.nameText}"
                    android:visibility="@{handler.nameVisibility}" />

                <Button
                    android:id="@+id/okProfileButtonTopfaceTeam"
                    style="@style/OkProfileButtons"
                    android:onClick="@{handler.onButtonShowGroupClick}"
                    android:text="@string/vk_profile_button_tf_group"
                    android:visibility="@{handler.buttonVisibility}" />

            </LinearLayout>
        </ScrollView>

        <ProgressBar
            android:id="@+id/mainProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{handler.progressVisibility}" />
    </RelativeLayout>
</layout>