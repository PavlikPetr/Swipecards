<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/loInvitesPopup"
                android:orientation="vertical"
                android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_60_percent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:paddingBottom="20dp"
        android:paddingLeft="42dp"
        android:paddingRight="42dp"
        android:paddingTop="30dp">

        <TextView
            android:id="@+id/airMessagesTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center"
            style="@style/TitleBlackText"
            android:textSize="20sp"
            android:text="@string/general_attention"
            android:minHeight="50dp"/>

        <TextView
            android:id="@+id/airMessagesText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/airMessagesTitle"
            android:gravity="center"
            android:textColor="@color/bg_main"
            android:textSize="16sp"
            android:paddingTop="30dp"
            android:paddingBottom="28dp" />

        <View
            android:id="@+id/fakeView"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_below="@+id/airMessagesText"
            android:layout_centerHorizontal="true"/>

        <Button
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignRight="@id/fakeView"
            android:layout_alignParentLeft="true"
            android:layout_alignTop="@id/fakeView"
            android:id="@+id/buyVip"
            android:text="@string/buying_vip_status"
            android:layout_marginRight="2dp"
            android:padding="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"/>

                <Button
            style="@style/Widget.Topface.Button.Big.Gray"
            android:id="@+id/deleteMessages"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:layout_alignTop="@id/fakeView"
            android:layout_alignLeft="@id/fakeView"
            android:text="@string/general_delete_messages"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="2dp"
            android:padding="6dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:textSize="14sp"/>

    </RelativeLayout>

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/ipLocker"
        android:visibility="gone"
        style="@style/LoadingLocker"/>

</RelativeLayout>
