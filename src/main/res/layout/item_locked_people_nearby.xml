<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.people_nearby.people_nerby_redesign.PeopleNearbyLockedViewModel"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:id="@+id/root"
                  style="@style/EmptyFeedsViewGravity"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:orientation="vertical">

        <ImageView
            style="@style/LandscapePortraitImagesVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:src="@drawable/background_people_close"/>

        <TextView
            style="@style/ListItemEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@{viewModel.description}"/>

        <Button
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:onClick="@{()->viewModel.unlockByCoinsClick()}"
            android:text="@{viewModel.unlockByCoinsText}"
            android:textSize="@dimen/unlock_likes_by_coins_button_text_size"
            android:visibility="@{viewModel.unlockByCoinsVisibility}"/>

        <TextView
            style="@style/ListItemEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="@{viewModel.premiumText}"
            android:visibility="@{viewModel.premiumTextVisibility}"/>

        <Button
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:onClick="@{()->viewModel.onBuyVipClick()}"
            android:text="@{viewModel.unlockByPremiumButtonText}"
            android:visibility="@{viewModel.unlockByPremiumButtonVisibility}"/>
    </LinearLayout>
</layout>