<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.dating.PopupMutualViewModel"/>
    </data>

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent">
         
         <ImageView
             android:layout_width="14dp"
             android:layout_height="14dp"
             android:src="@drawable/skip"
             android:layout_alignParentRight="true"
             android:layout_alignParentTop="true"
             android:layout_marginTop="20dp"
             android:layout_marginRight="16dp"
             android:onClick="@{() -> viewModel.closePopup()}"/>

         <TextView
             android:id="@+id/popupTitle"
             style="@style/PopupTitle"
             android:text="@string/mutual_popup_you_get_mutual"
             android:layout_marginTop="86dp"
             android:layout_centerHorizontal="true"/>

         <ImageView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/stroke_1"
             android:layout_toLeftOf="@id/mutualIC"
             android:layout_marginRight="17dp"
             android:layout_above="@id/avatarUser"
             android:layout_marginBottom="22dp"/>

         <ImageView
             android:layout_width="20dp"
             android:layout_height="16dp"
             android:src="@drawable/envelop"
             android:layout_toLeftOf="@id/icPen"
             android:layout_above="@id/avatarUser"
             android:layout_marginBottom="22dp"/>

         <!--Ты сам-->
         <ImageView
             android:layout_width="140dp"
             android:layout_height="140dp"
             android:src="@drawable/girl_blur_6"
             android:layout_toRightOf="@id/icArrow"
             android:layout_marginLeft="24dp"
             android:layout_above="@id/icArrow"
             android:layout_marginBottom="16dp"
             app:glideTransformationPhoto="@{model.userPhoto}"
             app:placeholderRes="@{model.userPlaceholderRes}"
             app:typeTransformation="@{model.type}"/>

         <!--Кто-то, кому ты не безразличен-->
         <ImageView
             android:id="@+id/avatarUser"
             android:layout_width="140dp"
             android:layout_height="140dp"
             android:layout_toLeftOf="@id/icPen"
             android:layout_marginRight="24dp"
             android:layout_above="@id/icArrow"
             android:layout_marginBottom="16dp"
             android:src="@drawable/man_blur_5"
             app:glideTransformationPhoto="@{model.mutualUserPhoto}"
             app:placeholderRes="@{model.mutualPlaceholderRes}"
             app:typeTransformation="@{model.mutualType}"
             app:outSideCircle="@{model.outsideCircle}"/>

         <ImageView
             android:id="@+id/icArrow"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/arrow_to_left"
             android:layout_toLeftOf="@id/mutualIC"
             android:layout_marginRight="33dp"
             android:layout_alignBottom="@+id/mutualIC"
             android:layout_marginBottom="10dp"/>

         <ImageView
             android:id="@+id/mutualIC"
             android:layout_width="74dp"
             android:layout_height="74dp"
             android:src="@drawable/ic_mutually"
             android:layout_below="@+id/popupTitle"
             android:layout_marginTop="176dp"
             android:layout_centerHorizontal="true"/>

         <ImageView
             android:id="@+id/icPen"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:src="@drawable/pen"
             android:layout_toRightOf="@+id/mutualIC"
             android:layout_marginLeft="20dp"
             android:layout_alignTop="@+id/mutualIC"
             android:layout_marginTop="46dp"/>

         <Button
             android:id="@+id/btnChangeFilterDating"
             style="@style/PopupGreenButton.Background"
             android:onClick="@{() -> viewModel.startDialog()}"
             android:text="@string/start_dialog"
             android:textSize="18sp"
             android:textAllCaps="true"
             android:layout_marginTop="78dp"
             android:layout_below="@+id/avatarUser"
             android:layout_centerHorizontal="true"/>

         <Button
             android:id="@+id/btnClearFilterDating"
             style="@style/PopupBorderlessdButton"
             android:onClick="@{() -> viewModel.closePopup()}"
             android:text="@string/continue_to_meet"
             android:layout_below="@id/btnChangeFilterDating"
             android:layout_centerHorizontal="true"/>

     </RelativeLayout>

</layout>