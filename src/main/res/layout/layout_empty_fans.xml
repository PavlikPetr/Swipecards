<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/EmptyFeedsViewGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ic_guitar"
            style="@style/EmptyFeedsViewImageVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="20dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_guitar" />

        <TextView
            android:id="@+id/tvText"
            style="@style/ListItemEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/buy_status_and_watch_your_fans" />

        <Button
            android:id="@+id/btnBuy"
            style="@style/BigStretchedBlueButton"
            android:text="@string/buying_vip_status" />
    </LinearLayout>
</ScrollView>