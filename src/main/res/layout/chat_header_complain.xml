<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="complainVisibility"
            type="boolean" />

        <variable
            name="listener"
            type="com.topface.topface.chat.IComplainHeaderActionListener" />
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bg_white"
        android:visibility="@{complainVisibility}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingRight="48dp">

            <Button
                style="@style/PopupBorderlessButtonNoPadding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> listener.onBlock()}"
                android:text="@string/general_block_v2" />

            <Button
                style="@style/PopupBorderlessButtonNoPadding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:onClick="@{() -> listener.onComplain()}"
                android:text="@string/general_complaint" />

        </LinearLayout>

        <Button
            style="@style/PopupBorderlessButtonNoPadding"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="end|center_vertical"
            android:drawableLeft="@drawable/invite_popup_close_selector"
            android:gravity="center"
            android:onClick="@{() -> listener.onClose()}"
            android:padding="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_gravity="bottom"
            android:background="#dbdbdb" />
    </FrameLayout>
</layout>