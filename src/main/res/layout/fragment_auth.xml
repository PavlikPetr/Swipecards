<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="handler"
            type="com.topface.topface.ui.fragments.AuthFragment.LoginFragmentHandler" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ScrollView xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:fillViewport="true">

                <RelativeLayout
                    android:id="@+id/authContainer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/tf_auth_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="@{handler::upButtonClick}"
                        android:padding="20dp"
                        android:src="@drawable/ic_arrow_back"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/ivAuthGroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="@dimen/tf_logo_top"
                        android:gravity="center"
                        android:orientation="vertical"
                        tools:ignore="UnusedAttribute">

                        <ImageView
                            android:id="@+id/ivAuthLogo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/tf_logo_bottom"
                            android:src="@drawable/auth_logo" />

                        <Button
                            android:id="@+id/btnAuthFB"
                            style="@style/AuthFb"
                            android:onClick="@{handler::fbButtonClick}"
                            android:text="@string/auth_btn_fb" />

                        <Button
                            android:id="@+id/btnAuthVK"
                            style="@style/AuthVk"
                            android:layout_marginTop="@dimen/auth_buttons_padding"
                            android:onClick="@{handler::vkButtonClick}"
                            android:text="@string/auth_btn_vk" />

                        <Button
                            android:id="@+id/btnAuthOk"
                            style="@style/AuthOk"
                            android:layout_marginTop="@dimen/auth_buttons_padding"
                            android:onClick="@{handler::okButtonClick}"
                            android:text="@string/auth_btn_ok" />

                        <Button
                            android:id="@+id/btnTfAccount"
                            style="@style/AuthButtonWhite"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="@{handler.mTFButtonPaddingTop}"
                            android:gravity="center"
                            android:onClick="@{handler::tfButtonClick}"
                            android:text="@string/auth_btn_tf"
                            android:textColor="@color/auth_fragment_text_color" />

                        <Button
                            android:id="@+id/btnEntrance"
                            style="@style/AuthButtonBlue"
                            android:drawableLeft="@drawable/ic_enter"
                            android:onClick="@{handler::entranceButtonClick}"
                            android:text="@string/sign_in"
                            android:textColor="#FFFFFF"
                            android:visibility="gone" />

                        <Button
                            android:id="@+id/btnCreateAccount"
                            style="@style/AuthButtonGray"
                            android:layout_marginBottom="5dp"
                            android:layout_marginTop="@dimen/auth_buttons_padding"
                            android:drawableLeft="@drawable/ic_add"
                            android:onClick="@{handler::createAccountButtonClick}"
                            android:text="@string/create_account"
                            android:textColor="#4B4B4B"
                            android:visibility="gone" />
                    </LinearLayout>
                </RelativeLayout>
            </ScrollView>

            <Button
                android:id="@+id/btnOtherServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@null"
                android:onClick="@{handler.otherSocButtonClick}"
                android:text="@{handler.getOtherServicesButtonText}"
                android:textColor="@color/auth_fragment_text_color" />
        </LinearLayout>

        <ProgressBar
            android:id="@+id/prsAuthLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/auth_progressbar_drawable"
            android:visibility="gone" />
    </FrameLayout>
</layout>