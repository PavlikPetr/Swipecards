<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="com.topface.topface.glide.tranformation.GlideTransformationType"/>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.enhanced.tabbed_likes.BaseLikesFeedViewModel"/>
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:onClick="@{()-> viewModel.onItemClick()}"
        app:cardBackgroundColor="@color/card_background_selector"
        app:cardCornerRadius="@dimen/feed_card_corner_radius"
        app:cardElevation="@dimen/feed_card_elevation"
        app:cardMaxElevation="@dimen/feed_card_elevation"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:contentPaddingBottom="3dp"
        app:contentPaddingLeft="16dp"
        app:contentPaddingRight="16dp"
        app:contentPaddingTop="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/feed_card_avatar_size"
                android:layout_height="@dimen/feed_card_avatar_size"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:scaleType="centerCrop"
                app:glideTransformationPhoto="@{viewModel.avatar}"
                app:placeholderRes="@{viewModel.placeholderRes}"
                app:typeTransformation="@{GlideTransformationType.CROP_CIRCLE_TYPE}"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawableEnd="@{viewModel.onlineImage}"
                android:drawablePadding="6dp"
                android:drawableRight="@{viewModel.onlineImage}"
                android:ellipsize="end"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@{viewModel.name}"
                android:textColor="#de000000"
                android:textSize="16sp"
                tools:text="Маргарита, 22"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="1dp"
                android:drawableLeft="@drawable/ic_geo"
                android:drawablePadding="6dp"
                android:drawableStart="@drawable/ic_geo"
                android:ellipsize="end"
                android:maxLines="1"
                android:paddingBottom="10dp"
                android:singleLine="true"
                android:text="@{viewModel.city}"
                android:textColor="#9e9e9e"
                android:textSize="16sp"
                tools:text="Москва"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#f2f2f2"/>

            <Button
                style="@style/PopupBorderlessButtonNoPadding"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:onClick="@{() -> viewModel.showChat()}"
                android:paddingBottom="13dp"
                android:paddingTop="13dp"
                android:singleLine="true"
                android:text="@string/chat"
                android:textColor="#3b84ff"
                android:textSize="14sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>