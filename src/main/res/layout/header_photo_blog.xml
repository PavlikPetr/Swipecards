<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.photoblog.HeaderPhotoBlogViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/photo_feed_header_bg_color"
        android:orientation="horizontal"
        android:padding="@dimen/margin_item_photoblog">

        <com.topface.topface.ui.views.ImageViewRemote
            style="@style/PhotoBlogAvatar"
            app:remoteSrc="@{viewModel.urlAvatar}"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_item_photoblog"
            android:orientation="vertical">

            <TextView
                style="@style/ListName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/photofeed_add_photo_to_feed_title"/>

            <Button
                style="@style/BlueButtonAllCaps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_button_photoblog"
                android:onClick="@{() -> viewModel.showAddToLeader()}"
                android:text="@string/leaders_go_date"/>

        </LinearLayout>
    </LinearLayout>
</layout>