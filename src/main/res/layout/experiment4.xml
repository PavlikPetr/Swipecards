<layout xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.topface.topface.ui.dialogs.trial_vip_experiment.Experiment4BaseViewModel"/>
    </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <RelativeLayout android:layout_width="300dp"
                            android:layout_height="300dp">
                    <ImageView
                        android:id="@+id/firstFakeAvatar"
                        android:layout_height="50dp"
                        android:layout_above="@+id/IVForAvatar"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="12dp"
                        app:animationSrc="@{@anim/scale}"
                        app:bindStartOffSet="@{viewModel.FIRST}" android:layout_width="50dp"/>
                    <ImageView
                        android:id="@+id/IVLeftTop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/firstFakeAvatar"
                        android:layout_toLeftOf="@id/firstFakeAvatar"
                        android:layout_marginRight="30dp"
                        android:src="@{viewModel.imageLeftTop}"/>

                    <ImageView
                        android:id="@+id/fifthFakeAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/IVForAvatar"
                        android:layout_marginTop="5dp"
                        android:layout_toLeftOf="@+id/IVForAvatar"
                        android:layout_marginRight="6dp"
                        app:animationSrc="@{@anim/scale}"
                        app:bindStartOffSet="@{viewModel.FIFTH}"
                    />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/circle__for_experiment_popup"
                        android:layout_alignBottom="@+id/IVForAvatar"
                        android:layout_toLeftOf="@+id/IVForAvatar"
                        android:layout_marginRight="9dp"
                        android:layout_marginBottom="31dp"/>
                    <ImageView
                        android:id="@+id/secondFakeAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignTop="@+id/IVForAvatar"
                        android:layout_toRightOf="@+id/IVForAvatar"
                        android:layout_marginLeft="6dp"
                        app:animationSrc="@{@anim/scale}"
                        app:bindStartOffSet="@{viewModel.SECOND}"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@{viewModel.imageRightBottom}"
                        android:layout_alignBottom="@+id/IVForAvatar"
                        android:layout_toRightOf="@+id/IVForAvatar"
                        android:layout_marginLeft="18dp"
                        android:layout_marginBottom="32dp"/>

                    <com.topface.topface.ui.views.ImageViewRemote
                        android:id="@+id/IVForAvatar"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        app:postProcessor="inscribedAvatar"
                        app:remoteSrc="@{viewModel.avatar}"
                        app:roundedImgBorderColor="@android:color/white"
                        app:roundedImgBorderWidth="3dp"/>

                    <ImageView
                        android:id="@+id/fourthFakeAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="8dp"
                        android:layout_alignTop="@+id/IVBelowAvatar"
                        android:layout_toLeftOf="@+id/IVBelowAvatar"
                        app:animationSrc="@{@anim/scale}"
                        app:bindStartOffSet="@{viewModel.FOURTH}"/>
                    <ImageView
                        android:id="@+id/IVBelowAvatar"
                        android:layout_width="74dp"
                        android:layout_height="74dp"
                        android:src="@{viewModel.imageUnderAvatar}"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="13dp"
                        android:layout_centerHorizontal="true"/>
                    <ImageView
                        android:id="@+id/thirdFakeAvatar"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignTop="@+id/IVBelowAvatar"
                        android:layout_marginTop="8dp"
                        android:layout_toRightOf="@+id/IVBelowAvatar"
                        android:layout_marginLeft="7dp"
                        app:animationSrc="@{@anim/scale}"
                        app:bindStartOffSet="@{viewModel.THIRD}"/>
                </RelativeLayout>

            <TextView
                style="@style/PopupMessage"
                android:layout_marginTop="20dp"
                android:text="@{viewModel.popupMessage}"/>
        </LinearLayout>
</layout>