<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.enhanced.tabbed_likes.likes.LikesItemViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp">

        <FrameLayout
            android:id="@+id/background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="@{viewModel.backgroundAlpha}">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_shadow"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ic_shadow"/>
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/bg_white"
            app:cardCornerRadius="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"
                        app:placeholderRes="@{viewModel.placeholderRes}"
                        app:setImgeByGlideWithPlaceholder="@{viewModel.avatar}"/>

                    <View
                        android:id="@+id/item_swipe_left_indicator"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerInParent="true"
                        android:alpha="0"
                        android:background="@drawable/ic_like"/>

                    <View
                        android:id="@+id/item_swipe_right_indicator"
                        android:layout_width="96dp"
                        android:layout_height="96dp"
                        android:layout_centerInParent="true"
                        android:alpha="0"
                        android:background="@drawable/ic_dislike"/>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:paddingLeft="12dp"
                        android:paddingStart="12dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@{viewModel.name}"
                            android:textColor="#de000000"
                            android:textSize="20sp"
                            tools:text="Марьяна, 22"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_geo"
                            android:drawablePadding="6dp"
                            android:drawableStart="@drawable/ic_geo"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:singleLine="true"
                            android:text="@{viewModel.city}"
                            android:textColor="#9e9e9e"
                            android:textSize="16sp"
                            tools:text="Москва"/>
                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/skip"
                        style="@style/DatingBig.V2.Skip"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:onClick="@{() -> viewModel.onSkipClick()}"/>

                    <ImageButton
                        android:id="@+id/send_like"
                        style="@style/DatingBig.V2.Like"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:layout_marginRight="12dp"
                        android:onClick="@{() -> viewModel.onLikeClick()}"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </FrameLayout>
</layout>