<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:id="@+id/complains_scroll"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <!-- Фото -->
        <TextView
            android:id="@+id/loPhotoHeader"
            style="@style/ComplainsHeader" />

        <TextView
            android:id="@+id/typePorn"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typeEro"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typePicture"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typeFake"
            style="@style/WhiteListItem.Underline" />

        <!-- сообщения -->
        <TextView
            android:id="@+id/loMsgHeader"
            style="@style/ComplainsHeader" />

        <TextView
            android:id="@+id/typeSpam"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typeSwear"
            style="@style/WhiteListItem.Underline" />

        <!-- информация -->
        <TextView
            android:id="@+id/loInfoHeader"
            style="@style/ComplainsHeader" />

        <TextView
            android:id="@+id/typeCommercial"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typeFakeData"
            style="@style/WhiteListItem.Underline" />

        <TextView
            android:id="@+id/typeSwearData"
            style="@style/WhiteListItem.Underline" />
    </LinearLayout>

</ScrollView>