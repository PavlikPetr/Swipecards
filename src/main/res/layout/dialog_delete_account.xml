<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loDialog"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">


    <com.topface.topface.ui.views.ImageViewRemote xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
        ivr:postProcessor="mask"
        ivr:clipMask="@drawable/feed_photo_mask"
        android:background="@drawable/feed_photo_selector"
        android:id="@+id/ivAvatar"
        android:layout_width="73dp"
        android:layout_height="73dp"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        style="@style/TitleWhiteText"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/tvWarningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        style="@style/TitleWhiteText"
        android:layout_marginTop="24dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnCancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            style="@style/Widget.Topface.Button.Big.Blue"
            android:text="@android:string/cancel"
            android:layout_marginRight="4dp" />

        <Button
            android:id="@+id/btnOk"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/delete"
            style="@style/Widget.Topface.Button.Big.Gray"
            android:layout_marginLeft="4dp" />

    </LinearLayout>

</LinearLayout>

