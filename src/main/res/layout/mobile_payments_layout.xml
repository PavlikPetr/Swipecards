<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/titleMobilePayments"
        style="@style/TitleWhiteText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/buy_mobile_payments"
        android:textStyle="bold"/>

    <LinearLayout
        android:id="@+id/mobilePaymentsList"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleMobilePayments"
        android:orientation="horizontal">

        <ImageButton
            android:tag="mobilePaymentButton"
            style="@style/MobilePaymentButton"
            android:src="@drawable/ic_buy_sms"/>

        <ImageButton
            android:tag="mobilePaymentButton"
            style="@style/MobilePaymentButton"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/ic_buy_qiwi"/>

        <ImageButton
            android:tag="mobilePaymentButton"
            style="@style/MobilePaymentButton"
            android:src="@drawable/ic_buy_paypal"/>
    </LinearLayout>

</RelativeLayout>