<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.dialogs.new_rate.GoogleFeedbackPopopViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_leave_feedback"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:text="@string/what_we_can_improve"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            app:errorEnabled="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            app:hintTextAppearance="@style/RateTextStyle"
            app:errorTextAppearance="@style/RateTextStyle">

            <android.support.design.widget.TextInputEditText
                style="@style/RatePopupTextInput"
                android:maxLines="5"
                android:text="@={viewModel.text}"/>

        </android.support.design.widget.TextInputLayout>

        <Button
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="@{viewModel.buttonEnabled}"
            android:onClick="@{()->viewModel.okButtonClick()}"
            android:text="@string/send_rate_feedback"/>

        <Button
            style="@style/PopupBorderlessButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="8dp"
            android:onClick="@{()->viewModel.closeButtonClick()}"
            android:text="@string/thanks_for_your_rate_close"
            android:textColor="#b9b9b9"/>
    </LinearLayout>


</layout>