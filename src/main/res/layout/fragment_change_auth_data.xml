<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="18dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <TextView
            android:id="@+id/setPasswordText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/general_set_password"
            android:textSize="16sp"
            android:visibility="gone" />

        <EditText
            android:id="@+id/edOldPassword"
            style="@style/ItemWhiteText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="left|center_vertical"
            android:background="@drawable/city_editbox_selector"
            android:singleLine="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:textColorHint="#5F5F5F" />

        <EditText
            android:id="@+id/edMainField"
            style="@style/SettingsAccountEditText"
            android:gravity="left|center_vertical" />

        <EditText
            android:id="@+id/edConfirmationField"
            android:layout_marginTop="14dp"
            style="@style/SettingsAccountEditText"
            android:gravity="left|center_vertical" />

        <Button
            style="@style/FlatButton.Blue"
            android:id="@+id/btnSave"
            android:layout_marginTop="16dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />
    </LinearLayout>

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/llvLogoutLoading"
        style="@style/LoadingLocker"
        android:visibility="gone" />
</RelativeLayout>
