<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_new_list_selector">

    <!-- аватар -->

    <include
        android:id="@+id/icon"
        layout="@layout/item_feed_part_avatar" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon">

        <TextView
            android:id="@+id/ad_title"
            style="@style/ListName.Ad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:drawablePadding="6dp"
            android:drawableRight="@drawable/ic_arrow_feed_ads" />

        <TextView
            android:id="@+id/ad_description"
            style="@style/AdDescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ad_title"
            android:layout_marginRight="6dp"
            android:gravity="left|center_vertical" />

    </RelativeLayout>
</RelativeLayout>
