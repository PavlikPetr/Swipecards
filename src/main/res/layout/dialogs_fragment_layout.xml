<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.topface.topface.data.FeedDialog"/>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.dialogs.dialogs_redesign.DialogsFragmentViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            app:OnSwipeRefreshListener="@{viewModel}"
            app:setEnabled="@{viewModel.isEnable}"
            app:setRefresh="@{viewModel.isRefreshing}">

            <android.support.v7.widget.RecyclerView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/dialogs_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:overScrollMode="never"
                app:bindDataToCompositeAdapter="@{viewModel.data}"/>
        </android.support.v4.widget.SwipeRefreshLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1F1F1F">

            <include
                android:id="@+id/banner_container_for_feeds"
                layout="@layout/banner"/>
        </FrameLayout>
    </LinearLayout>

</layout>