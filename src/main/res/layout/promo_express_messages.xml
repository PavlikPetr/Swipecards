<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loInvitesPopup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_60_percent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="44dp"
            android:paddingTop="72dp">

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/firstFakeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/fake_girl1" />

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/secondFakeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/fake_girl2" />

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/thirdFakeUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fake_girl3" />

        </LinearLayout>

        <TextView
            android:id="@+id/airMessagesText"
            style="@style/TitleBlackText"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="24dp"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:textSize="16sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/buyVip"
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:background="@drawable/btn_blue_selector"
            android:ellipsize="end"
            android:minWidth="204dp"
            android:singleLine="true"
            android:text="@string/buying_vip_status" />

        <Button
            android:id="@+id/deleteMessages"
            style="@style/Widget.Topface.Button.Big.Gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_red_selector"
            android:ellipsize="end"
            android:minWidth="204dp"
            android:singleLine="true"
            android:text="@string/general_delete_messages" />

    </LinearLayout>

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/ipLocker"
        style="@style/LoadingLocker"
        android:visibility="gone" />

</RelativeLayout>
