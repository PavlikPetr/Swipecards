<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.profile.photoswitcher.viewModel.PhotoSwitcherViewModel" />

    </data>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- gallery -->
        <ViewStub
            android:id="@+id/gallery_album_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inflatedId="@+id/galleryAlbum"
            android:layout="@layout/ac_photos_image_switcher" />

        <!-- header bar -->
        <RelativeLayout
            android:id="@+id/loPhotoAlbumControl"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.topface.topface.ui.views.ImageViewRemote
                style="@style/AlbumGift"
                android:onClick="@{viewModel::onGiftClick}"
                android:visibility="@{viewModel.giftAvailable}"
                app:defaultSelector="@{viewModel.GIFT_SELECTOR_RESOURCE}"
                app:remoteSrc="@{viewModel.giftLink}" />

            <RelativeLayout
                android:id="@+id/loBottomPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@drawable/alpha_gray_panel">

                <Button
                    style="@style/ButtonWhiteText.SetAvatar"
                    android:drawableLeft="@{viewModel.buttonDrawable}"
                    android:onClick="@{viewModel::onAvatarButtonClick}"
                    android:text="@{viewModel.buttonText}" />

                <ImageButton
                    style="@style/AlbumDeleteButton"
                    android:onClick="@{viewModel::onDeleteButtonClick}"
                    android:src="@{viewModel.deleteButtonSelector}"
                    android:visibility="@{viewModel.deleteButtonVisibility}" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lockScreen"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bg_main"
            android:visibility="gone" />

        <com.topface.topface.ui.views.LockerView
            android:id="@+id/llvProfileLoading"
            style="@style/LoadingLocker"
            android:visibility="gone" />

    </RelativeLayout>
</layout>
