<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@color/bg_main">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/BackgroundFormTitleText" />

            <TextView
                android:id="@+id/tvLocale"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/incorrect_locale"
                android:padding="8dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="top|left"
                android:inputType="textMultiLine"
                android:padding="10dp"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:minLines="5"
                android:singleLine="false"
                android:textSize="14sp"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/tvEmailTitle"
                style="@style/BackgroundFormTitleText"
                android:text="@string/settings_feedback_email"
                android:visibility="visible" />

            <EditText
                android:id="@+id/edEmail"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="top|left|center_horizontal"
                android:inputType="textEmailAddress"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:singleLine="true"
                android:textSize="14sp"
                android:hint="@string/general_input_email"
                android:visibility="visible" />

            <TextView
                android:paddingTop="8dp"
                android:id="@+id/tvTransactionIdTitle"
                style="@style/BackgroundFormTitleText"
                android:text="@string/settings_feedback_transaction_number"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edTransactionId"
                android:layout_width="fill_parent"
                android:layout_height="34dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="top|left"
                android:inputType="text"
                android:paddingTop="8dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="8dp"
                android:textSize="14sp"
                android:hint="@string/settings_feedback_transaction_number_hint"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTransactionIdInfoLink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="left"
                android:text="@string/settings_feedback_transaction_link"
                android:textColor="#697DFF"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/fbLoadingLocker"
        android:layout_width="fill_parent"
        style="@style/LoadingLocker"
        android:layout_height="fill_parent"
        android:visibility="gone"/>

</RelativeLayout>
