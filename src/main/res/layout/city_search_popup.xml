<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.topface.topface.viewModels.CitySearchPopupViewModel" />

        <variable
            name="toolbarViewModel"
            type="com.topface.topface.ui.views.toolbar.view_models.BaseToolbarViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/city_root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarInclude"
            layout="@layout/toolbar_view"
            bind:viewModel="@{toolbarViewModel}" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray_bg"
            android:paddingBottom="4dp">

            <FrameLayout
                android:id="@+id/current_city_item"
                android:layout_width="match_parent"
                android:layout_height="@dimen/city_item_height"
                android:background="@color/bg_white"
                android:paddingBottom="5dp"
                app:elevation="@dimen/elevation_value">

                <TextView
                    android:id="@+id/u_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="@string/city_selector_your_city"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/current_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="18dp"
                    android:text="@{viewModel.cityObservableField}"
                    android:textColor="@color/dark_secondary_text"
                    android:textSize="16sp" />

            </FrameLayout>

        </FrameLayout>

        <EditText
            android:id="@+id/enter_city"
            android:layout_width="match_parent"
            android:layout_height="@dimen/city_item_height"
            android:background="@color/bg_white"
            android:drawableLeft="@drawable/ic_search"
            android:drawablePadding="16dp"
            android:gravity="center_vertical"
            android:hint="@string/city_selector_set_your_city"
            android:imeOptions="actionDone"
            android:lines="1"
            android:maxLines="1"
            android:paddingLeft="16dp"
            android:text="@={viewModel.editTextObservable}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/top_menu_disabled_text_color" />

        <com.topface.topface.ui.views.statistics_progress_bar.StatisticsProgressBar
            android:id="@+id/requestProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="15dp"
            android:visibility="@{viewModel.isRequestInProgress, default = gone}"
            app:plc="city_search_popup_load_cities_list" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/city_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="@{!viewModel.isRequestInProgress}" />

    </LinearLayout>
</layout>
