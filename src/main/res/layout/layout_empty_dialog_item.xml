<?xml version="1.0" encoding="utf-8"?>

<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="center_horizontal"
                  android:orientation="vertical">

        <ImageView
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_up_dialog"/>

        <ImageView
            android:id="@+id/ImageCenter"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:layout_marginTop="27dp"
            android:src="@drawable/pic_no_chats"/>

        <TextView
            android:id="@+id/dialogEmptyTitle"
            style="@style/EmptyDialogView"
            android:layout_marginTop="20dp"
            android:text="@string/dialog_empty_title"/>

        <TextView
            style="@style/EmptyDialogView"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="66dp"
            android:text="@string/write_those_with_who_you_have_mutual_sympathy"
            android:textColor="@color/empty_dialogs_message"/>

    </LinearLayout>

</layout>