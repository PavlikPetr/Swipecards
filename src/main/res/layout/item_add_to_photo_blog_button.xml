<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.add_to_photo_blog.PlaceButtonItemViewModel" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="24dp"
        android:paddingTop="24dp">

        <Button
            style="@style/AddToPhotoBlogGreenButton"
            android:onClick="@{() -> viewModel.onClick()}"
            android:text="@string/add_to_photo_blog_button_place" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="@{viewModel.priceText}"
            android:textColor="@color/add_to_photo_blog_price_text"
            android:textSize="13sp"
            tools:text="price - 6 monets" />
    </LinearLayout>
</layout>