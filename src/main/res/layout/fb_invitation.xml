<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.auth.fb_invitation.FBInvitationViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/topface_logo"/>

        <android.support.v4.view.ViewPager
            android:id="@+id/pager_introduction"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

        <com.topface.topface.ui.views.view_pager_indicator.CirclePageIndicator
            android:id="@+id/indicator"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="44dp"
            app:pageColor="@color/view_pager_indicator_non_select"
            app:fillColor="@color/view_pager_indicator_select"
            app:radius="5dp"
            app:strokeWidth="0dp"/>

        <Button
            android:id="@+id/btnAuthFB"
            style="@style/PopupGreenButton.Background"
            android:onClick="@{() -> viewModel.fbButtonClick()}"
            android:text="@string/fb_invitation_button_text"/>

    </LinearLayout>

</layout>