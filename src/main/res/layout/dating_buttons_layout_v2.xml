<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.topface.topface.ui.fragments.dating.design.v2.DatingButtonsViewModel"/>
    </data>

    <LinearLayout
        android:id="@+id/dating_buttons_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/show_chat"
                style="@style/DatingSmall.MessageV2"
                android:layout_width="@dimen/dating_small_button_size"
                android:layout_height="@dimen/dating_small_button_size"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.showChat()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/skip"
                style="@style/DatingBig.SkipV2"
                android:layout_width="@dimen/dating_big_button_size_v2"
                android:layout_height="@dimen/dating_big_button_size_v2"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.skip()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loader_bg"
                android:theme="@style/CircularProgress"
                android:visibility="@{model.isDatingProgressBarVisible}"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/send_like"
                style="@style/DatingBig.LikeV2"
                android:layout_width="@dimen/dating_big_button_size_v2"
                android:layout_height="@dimen/dating_big_button_size_v2"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.sendLike()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}"/>
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/send_admiration"
                style="@style/DatingSmall.AdmirationV2"
                android:layout_width="@dimen/dating_small_button_size"
                android:layout_height="@dimen/dating_small_button_size"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.validateSendAdmiration(model.BUTTON_FROM_ANCHOR)}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}"/>
        </FrameLayout>


    </LinearLayout>

</layout>