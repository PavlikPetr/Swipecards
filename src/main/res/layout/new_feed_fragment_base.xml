<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="com.topface.topface.ui.fragments.feed.enhanced.base.BaseFeedFragmentModel"/>

        <import type="com.topface.topface.data.FeedItem"/>

        <variable
            name="viewModel"
            type="BaseFeedFragmentModel&lt;FeedItem>"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white">

        <ProgressBar
            android:id="@+id/background_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="@{viewModel.isFeedProgressBarVisible}"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:OnSwipeRefreshListener="@{viewModel}"
            app:setRefresh="@{viewModel.isRefreshing}">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/feed_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fadeScrollbars="true"
                android:fadingEdge="none"
                android:paddingLeft="@dimen/add_to_leader_spacing_value"
                android:visibility="@{viewModel.isListVisible}"
                app:bindDataToFeedRecycler="@{viewModel.data}"/>
        </android.support.v4.widget.SwipeRefreshLayout>

        <com.topface.topface.ui.views.LockerView
            android:id="@+id/loading_feed_locker"
            style="@style/LoadingLocker"
            android:visibility="@{viewModel.isLockViewVisible}"/>

        <ViewStub
            android:id="@+id/empty_feed_stub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </RelativeLayout>
</layout>
