<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.experiments.onboarding.question.valueSetter.EnterValueFragmentViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <TextView
            style="@style/TitleThirdType"
            android:layout_above="@+id/inputTextLayout"
            android:text="@{viewModel.title}"
            tools:text="Укажи твой рост" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/inputTextLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            app:errorEnabled="@{viewModel.isErrorEnabled}"
            app:errorTextAppearance="@style/QuestionnaireErrorTextAppearance"
            app:hintTextAppearance="@style/QuestionnaireHintTextAppearance"
            app:setError="@{viewModel.error}">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.design.widget.TextInputEditText
                    style="@style/QuestionnaireInputTextEdit"
                    android:hint="@{viewModel.hint}"
                    android:maxLength="@{viewModel.maxLength}"
                    android:text="@={viewModel.text}"
                    tools:text="175" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingLeft="@dimen/questionnaire_unit_padding_left"
                    android:paddingStart="@dimen/questionnaire_unit_padding_left"
                    android:text="@{viewModel.unit}"
                    android:textColor="@color/questionnaire_unit_text_color"
                    android:textSize="@dimen/questionnaire_unit_text_size"
                    tools:ignore="RtlSymmetry"
                    tools:text="см" />
            </LinearLayout>
        </android.support.design.widget.TextInputLayout>

        <!--добавить стиль для розовой кнопки-->
        <Button
            style="@style/OnboardingPinkButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:onClick="@{() -> viewModel.onNext()}"
            android:padding="10dp"
            android:text="@string/onboarding_button_next" />

    </RelativeLayout>
</layout>