<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.topface.topface.ui.fragments.dating.DatingButtonsViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/dating_buttons_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/show_chat"
                style="@style/DatingSmall.Message"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.showChat()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/skip"
                style="@style/DatingBig.Skip"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.skip()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.topface.topface.ui.views.statistics_progress_bar.StatisticsProgressBar
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/loader_bg"
                android:theme="@style/CircularProgress"
                android:visibility="@{model.isDatingProgressBarVisible}"
                app:plc="@string/dating_fragment_loader" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/send_like"
                style="@style/DatingBig.Like"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.sendLike()}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/send_admiration"
                style="@style/DatingSmall.Admiration"
                android:clickable="@{model.isDatingButtonsLocked}"
                android:onClick="@{() -> model.validateSendAdmiration(model.BUTTON_FROM_ANCHOR)}"
                bind:fabVisibility="@{model.isDatingButtonsVisible}" />
        </FrameLayout>
    </LinearLayout>
</layout>