<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@drawable/bg_services_counters">

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentLeft="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/default_balance_constant"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold" />

                <com.topface.topface.ui.views.ServicesTextView xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                    android:id="@+id/fpsCurCoins"
                    stv:maxChars="5"
                    stv:charPadding="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    stv:fontSize="24"
                    stv:image="@drawable/ic_coins" />
            </LinearLayout>

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_alignParentRight="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp" />

                <com.topface.topface.ui.views.ServicesTextView xmlns:stv="http://schemas.android.com/apk/res/com.topface.topface"
                    android:id="@+id/fpsCurLikes"
                    stv:maxChars="5"
                    stv:charPadding="7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    stv:fontSize="24"
                    stv:image="@drawable/ic_sympathy" />
            </LinearLayout>
        </RelativeLayout>

        <Button
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:text="@string/default_energy_coins_buy_btn_text"
            style="@style/Widget.Topface.Button.Big.Blue"
            android:layout_margin="8dp"
            android:id="@+id/fpsBuyBtn" />

        <Button
            android:id="@+id/btnOfferwalls"
            android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            style="@style/Widget.Topface.Button.Big.Gray"
            android:text="@string/get_it_for_free"
            android:layout_margin="8dp" />
    </LinearLayout>
</ScrollView>