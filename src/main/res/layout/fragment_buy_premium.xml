<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/fbpContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="14dp"
            android:paddingRight="14dp">

            <com.topface.IllustratedTextView.IllustratedTextView
                android:id="@+id/payReasonFragmentBuyPremium"
                style="@style/PayReasonView"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <TextView
                android:id="@+id/fbpBuyingDisabled"
                style="@style/TitleGrayText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="@string/general_buying_disabled"
                android:visibility="gone" />

            <ViewStub
                android:id="@+id/EditorTestStub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout="@layout/fragment_buy_editor"
                android:paddingLeft="2dp"
                android:paddingRight="2dp" />

            <LinearLayout
                android:id="@+id/fbpBtnContainer"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/editPremiumContainer"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/fepInvis"
                style="@style/WhiteListItem.Underline"
                layout="@layout/vip_item_edit_form_switch"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/form_item_height" />

            <include
                android:id="@+id/fepBlackList"
                style="@style/WhiteListItem.Underline"
                layout="@layout/vip_item_edit_form_select"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/form_item_height" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>