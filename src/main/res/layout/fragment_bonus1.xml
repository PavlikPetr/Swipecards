<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvOfferwalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="visible" />

        <RelativeLayout
            android:id="@+id/emptyOfferwalls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/emptyOfferImg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/emptyOfferImg"
                android:textSize="16sp"
                android:textColor="#232C35"
                android:text="@string/preload_photo_type_preload_off"
                android:gravity="center"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <ProgressBar
            android:id="@+id/prsOfferwalls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateDrawable="@drawable/auth_progressbar_drawable"
            android:visibility="gone" />
    </RelativeLayout>
</layout>