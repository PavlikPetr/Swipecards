<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.add_to_photo_blog.PhotoListItemViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/add_to_photo_blog_item_background"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fadeScrollbars="false"
            android:fadingEdge="none"
            app:bindDataToCompositeAdapterWithSmoothUpdate="@{viewModel.data}" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/photoblog_divider_size"
            android:background="@color/forms_divider_color" />
    </LinearLayout>
</layout>