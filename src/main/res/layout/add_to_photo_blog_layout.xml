<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="handlers"
            type="com.topface.topface.viewModels.AddToPhotoBlogViewModel" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/root"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/user_photos_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:paddingLeft="@dimen/add_to_leader_spacing_value" />

        <com.topface.topface.ui.views.LockerView
            android:id="@+id/locker"
            style="@style/LoadingLocker"
            android:visibility="gone" />

    </LinearLayout>

</layout>
