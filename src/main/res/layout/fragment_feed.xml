<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loControlsGroup"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@color/bg_white">

    <!-- button bar -->
    <include layout="@layout/bar_double_big_button" />

    <include layout="@layout/leaders" />

    <RelativeLayout
        android:id="@+id/feedContainer"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ProgressBar
            android:id="@+id/tvBackgroundText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_medium_holo"/>

        <com.topface.PullToRefreshListView xmlns:p2r="http://schemas.android.com/apk/res-auto"
            android:id="@+id/lvFeedList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:divider="@android:color/transparent"
            android:dividerHeight="0dp"
            android:fadeScrollbars="true"
            android:fadingEdge="none"
            p2r:ptrHeaderTextColor="#8A8A8A"
            p2r:ptrOverScroll="false"
            p2r:ptrShowIndicator="false"
            android:listSelector="@android:color/transparent" />

        <com.topface.topface.ui.views.LockerView
            android:id="@+id/llvFeedLoading"
            style="@style/LoadingLocker"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <ViewStub
            android:id="@+id/stubForEmptyFeed"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />
    </RelativeLayout>

    <include layout="@layout/banner" />
</LinearLayout>