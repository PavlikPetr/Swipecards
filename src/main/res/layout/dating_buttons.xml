<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:inAnimation="@android:anim/fade_in"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <Button
        android:id="@+id/btnDatingProfile"
        style="@style/DatingButtonsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@null"
        android:drawableTop="@drawable/dating_man_selector"
        android:text="@string/general_profile" />

    <RelativeLayout
        android:id="@+id/loDatingLove"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@android:color/transparent">

        <Button
            android:id="@+id/btnDatingAdmiration"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/dating_admiration_selector"
            android:text="@string/general_delight" />

        <TextView
            android:id="@+id/tvDatingLovePrice"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@android:color/transparent"
            android:drawablePadding="2dp"
            android:drawableRight="@drawable/coins"
            android:paddingLeft="28dp"
            android:paddingTop="42dp"
            android:text="@integer/love_dating_button"
            android:textStyle="bold" />

    </RelativeLayout>

    <Button
        android:id="@+id/btnDatingSympathy"
        style="@style/DatingButtonsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/dating_like_selector"
        android:text="@string/general_sympathy" />

    <Button
        android:id="@+id/btnDatingSkip"
        style="@style/DatingButtonsText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/btn_skip_selector"
        android:text="@string/skip" />
</LinearLayout>
