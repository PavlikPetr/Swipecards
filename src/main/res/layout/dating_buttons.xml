<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.dating.design.v1.DatingFragmentViewModel"/>

    </data>

    <LinearLayout
        android:id="@+id/dating_buttons_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dating_buttons_padding_bottom"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="@dimen/dating_buttons_padding_top"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="@{viewModel.isVisible}">

        <ImageButton
            style="@style/NewDatingMessage"
            android:layout_width="@dimen/dating_smaller_buttons_size"
            android:layout_height="@dimen/dating_smaller_buttons_size"
            android:layout_gravity="left|center_vertical"
            android:onClick="@{() -> viewModel.showChat()}"
            app:enable="@{viewModel.isChatButtonsEnable}"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            style="@style/NewDatingLike"
            android:layout_width="@dimen/dating_bigger_buttons_size"
            android:layout_height="@dimen/dating_bigger_buttons_size"
            android:layout_gravity="center"
            android:onClick="@{() -> viewModel.sendLike()}"
            app:enable="@{viewModel.isLikeButtonsEnable}"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            style="@style/NewDatingSkip"
            android:layout_width="@dimen/dating_bigger_buttons_size"
            android:layout_height="@dimen/dating_bigger_buttons_size"
            android:layout_gravity="center"
            android:onClick="@{() -> viewModel.skip()}"
            app:enable="@{viewModel.isSkipButtonsEnable}"/>

        <View
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <ImageButton
            style="@style/DatingProfile"
            android:layout_width="@dimen/dating_smaller_buttons_size"
            android:layout_height="@dimen/dating_smaller_buttons_size"
            android:layout_gravity="right|center_vertical"
            android:onClick="@{() -> viewModel.showProfile()}"
            app:enable="@{viewModel.isProfileButtonsEnable}"/>
    </LinearLayout>
</layout>