<?xml version="1.0" encoding="utf-8"?>
<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:inAnimation="@android:anim/fade_in">

    <LinearLayout
        android:id="@+id/ratingButtonsFirst"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/loDatingLove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:gravity="center">

            <Button
                android:id="@+id/btnDatingAdmiration"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableTop="@drawable/dating_admiration_selector"
                android:text="@string/general_delight" />

            <TextView
                android:id="@+id/tvDatingLovePrice"
                style="@style/DatingButtonsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btnDatingAdmiration"
                android:layout_alignRight="@id/btnDatingAdmiration"
                android:layout_marginBottom="9sp"
                android:background="@android:color/transparent"
                android:drawableRight="@drawable/coins"
                android:drawablePadding="2dp"
                android:text="@integer/love_dating_button"
                android:textStyle="bold" />
        </RelativeLayout>

        <Button
            android:id="@+id/btnDatingSympathy"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/dating_like_selector"
            android:text="@string/general_sympathy" />

        <Button
            android:id="@+id/btnDatingSkip"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/btn_skip_selector"
            android:text="@string/dating_skip_button" />

        <Button
            android:id="@+id/btnDatingSwitchNext"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/dating_switch_next_selector"
            android:text="@string/dating_switch_button" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ratingButtonsSecond"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/btnDatingChat"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/dating_chat_selector"
            android:text="@string/dating_chat_button" />

        <Button
            android:id="@+id/btnDatingProfile"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/dating_man_selector"
            android:text="@string/general_profile" />

        <Button
            android:id="@+id/btnDatingPrev"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/dating_prev_selector"
            android:text="@string/dating_prev_button" />

        <Button
            android:id="@+id/btnDatingSwitchPrev"
            style="@style/DatingButtonsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:background="@null"
            android:drawableTop="@drawable/dating_switch_prev_selector"
            android:text="@string/dating_switch_button" />
    </LinearLayout>
</ViewFlipper>
