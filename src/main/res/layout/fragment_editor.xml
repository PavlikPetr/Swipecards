<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#4c4c4c">

    <LinearLayout
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_height="wrap_content">

        <!-- Это просто текстовая информация о пользователе -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editor_title_name"
            android:id="@+id/EditorInfoName" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editor_title_id"
            android:autoLink="web"
            android:id="@+id/EditorInfoId" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditorInfoSsid"
            android:text="@string/editor_title_ssid" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditorInfoToken"
            android:text="@string/editor_title_token" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditorInfoSocialNetwork"
            android:autoLink="web"
            android:text="@string/editor_title_social_link" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/EditorInfoEditorStatus"
            android:text="@string/editor_title_editor_status" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/editor_transport"
            android:id="@+id/EditorTransport" />

        <!-- Настройка подключения к API: URL, версия, ревизия -->
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/EditorApiTitle"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:text="@string/editor_api_url_title" />

            <Spinner
                android:layout_toRightOf="@id/EditorApiTitle"
                android:id="@+id/EditorApiUrl"
                android:layout_alignTop="@id/EditorApiUrl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_below="@id/EditorApiUrl"
                android:id="@+id/EditorApiCheckbox" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/general_admin_login"
                android:layout_alignTop="@id/EditorApiCheckbox"
                android:layout_toRightOf="@id/EditorApiCheckbox"
                android:layout_margin="5dp"
                android:textSize="16sp"
                android:id="@+id/EditorLoginText" />

            <EditText
                android:inputType="text"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:layout_toRightOf="@id/EditorLoginText"
                android:layout_alignTop="@id/EditorApiCheckbox"
                android:id="@+id/EditorLogin" />


        </RelativeLayout>

        <!-- Настройка подключения к API: URL, версия, ревизия -->
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/EditorModeTitle"
                android:text="@string/editor_title_editor_mode" />

            <Spinner
                android:layout_toRightOf="@id/EditorModeTitle"
                android:id="@+id/EditorMode"
                android:layout_alignTop="@id/EditorModeTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:id="@+id/EditorDebugTitle"
                android:text="@string/editor_title_debug" />

            <Spinner
                android:layout_toRightOf="@id/EditorDebugTitle"
                android:id="@+id/EditorDebug"
                android:layout_alignTop="@id/EditorDebugTitle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <include
            android:id="@+id/loProfileId"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            layout="@layout/editor_goprofile" />

        <include
            android:id="@+id/loPopupSwitcher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            layout="@layout/editor_form_switch" />

        <include
            android:id="@+id/loTestNetworkSwitcher"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            layout="@layout/editor_form_switch" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="left"
            android:text="@string/editor_network_errors_tip"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/editor_emulate_connection" />

            <Spinner
                android:id="@+id/spConnection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/debugConnectionEnabled" />
        </LinearLayout>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_reconnect_to_stage"
            android:id="@+id/ReconnectWebSocket"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_refresh_profile"
            android:id="@+id/EditorRefreshProfile"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_clear_search_cache"
            android:id="@+id/EditorClearSearchCache"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_clear_air_messages"
            android:id="@+id/EditorClearAirMessages"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_configure_banners"
            android:id="@+id/EditorConfigureBanners"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_send_gcm"
            android:id="@+id/EditorSendGCMToken"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_send_auth"
            android:id="@+id/EditorSendAuth"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_send_auth"
            android:id="@+id/EditorCrash"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="30dp"
            android:text="@string/editor_save_settings"
            android:id="@+id/EditorSaveSettings"
            style="@style/Widget.Topface.Button.Big.Gray" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/editor_reset_settings"
            android:id="@+id/EditorResetSettings"
            style="@style/Widget.Topface.Button.Big.Gray" />
    </LinearLayout>

</ScrollView>
