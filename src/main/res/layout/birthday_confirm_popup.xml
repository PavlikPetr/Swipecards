<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loBirthdayPopup"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_marginTop="100dp"
        android:layout_width="280dp"
        android:layout_height="256dp"
        android:background="#efefef"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/icBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_cake"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="24dp" />

        <TextView
            android:id="@+id/birthdayReminderText"
            android:text="@string/birthdate_confirm"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="16sp"
            android:paddingBottom="20dp"
            android:gravity="center"
            android:layout_above="@+id/setBirthday"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/setBirthday"
            style="@style/FlatButton.Blue"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/set_birthdate" />

    </RelativeLayout>

</RelativeLayout>