<?xml version="1.0" encoding="utf-8"?>

<layout>

    <data>

        <import type="android.view.View" />

        <import type="java.lang.Math" />

        <variable
            name="nameAndAge"
            type="com.topface.topface.ui.fragments.feed.feed_utils.AgeAndNameData" />

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!--создаем отступ справа, чтобы там поместился возраст и признак статуса -->
        <TextView
            android:id="@+id/ifp_name"
            style="@style/FeedItemNameAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="45dp"
            android:drawablePadding="@{Math.round(nameAndAge.iconRes!=0?@dimen/user_device_icon_padding_left:0)}"
            android:drawableRight="@{nameAndAge.iconRes}"
            android:text="@{nameAndAge.name}" />

        <!--Сдвигаем вью на размер отступа во вью имени-->
        <TextView
            android:id="@+id/ifp_age"
            style="@style/FeedItemNameAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="-45dp"
            android:text="@{nameAndAge.age}"
            android:visibility="gone" />
    </LinearLayout>

</layout>
