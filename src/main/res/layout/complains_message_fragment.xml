<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReason"
            style="@style/ComplainsTitle"
            android:layout_margin="8dp"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etDescription"
            style="@style/ComplainsMessageEdit"
            android:layout_below="@id/tvReason"
            android:imeOptions="flagNoExtractUi" />

        <com.topface.topface.ui.views.locker_view.LockerView
            android:id="@+id/complainLocker"
            style="@style/LoadingLocker"
            android:visibility="gone"
            app:plc="complains_message_locker_view" />
    </RelativeLayout>
</ScrollView>
