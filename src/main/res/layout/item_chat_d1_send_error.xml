<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.feed.enhanced.chat.items.IResendableItem" />
    </data>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|top"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:drawableLeft="@drawable/ic_chat_error"
        android:drawablePadding="4dp"
        android:text="@string/general_error_normal"
        android:textColor="@color/dark_secondary_text"
        android:textSize="12sp"
        android:visibility="@{viewModel.isErrorVisible, default=visible}" />
</layout>