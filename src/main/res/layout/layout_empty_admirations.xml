<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadingEdge="none"
    android:fillViewport="true">

    <ViewFlipper
        android:id="@+id/vfEmptyViews"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/LandscapePortraitImagesVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_admiration" />

            <TextView
                android:id="@+id/tvText"
                style="@style/ListItemEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/likes_can_help_you" />

            <Button
                android:id="@+id/btnStartRate"
                style="@style/BigStretchedBlueButton"
                android:layout_width="match_parent"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/buy_resources" />

            <Button
                style="@style/UnlockButtonStyle"
                android:layout_width="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:tag="btnUnlock" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                style="@style/ListItemEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center" />

            <LinearLayout
                style="@style/LandscapePortraitImagesVisibility"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <com.topface.topface.ui.views.ImageViewRemote
                    android:id="@+id/ivOne"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/likes_female_one" />

                <com.topface.topface.ui.views.ImageViewRemote
                    android:id="@+id/ivTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/likes_female_two" />

                <com.topface.topface.ui.views.ImageViewRemote
                    android:id="@+id/ivThree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@drawable/likes_female_three" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvTextOne"
                style="@style/ListItemEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center"
                android:maxWidth="300dp"
                android:text="@string/likes_buy_vip" />

            <Button
                android:id="@+id/btnBuyVip"
                style="@style/Widget.Topface.Button.Big.Blue"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/buying_vip_status" />

            <Button
                style="@style/UnlockButtonStyle"
                android:layout_width="210dp"
                android:tag="btnUnlock" />
        </LinearLayout>
    </ViewFlipper>
</android.support.v4.widget.NestedScrollView>

