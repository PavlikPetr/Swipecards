<?xml version="1.0" encoding="utf-8"?>

<ViewFlipper xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/vfEmptyViews"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent"
             android:clickable="true"
    android:background="#FFF">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/likes_can_help_you"
            style="@style/ListItemEmptyText"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:fontFamily="Roboto Light"
            android:textColor="#333333"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:minWidth="240dp"
            android:minHeight="44dp">

            <Button
                android:id="@+id/btnStartRate"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="44dp"
                android:text="@string/buy_resources"
                style="@style/Widget.Topface.Button.Big.Blue"
                android:minWidth="240dp"
                android:textSize="18sp"
                android:textColor="#FFF"
                android:fontFamily="Roboto Regular" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_admiration"
            android:layout_above="@id/tvText"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|top"
        android:paddingTop="24dp">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            style="@style/ListItemEmptyText.Bold"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/ivOne"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/likes_male_one"/>

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/ivTwo"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/likes_male_two"/>

            <com.topface.topface.ui.views.ImageViewRemote
                android:id="@+id/ivThree"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:src="@drawable/likes_male_three"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvTextOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/likes_buy_vip"
            android:layout_marginTop="16dp"
            style="@style/ListItemEmptyText"
            android:maxWidth="300dp"/>

        <Button
            android:id="@+id/btnBuyVip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/buying_vip_status"
            style="@style/Widget.Topface.Button.Big.Blue"
            android:minWidth="210dp"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ViewFlipper>
