<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.views.toolbar.BaseToolbarViewModel"/>
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        app:layout_collapseMode="pin"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            app:layout_collapseMode="pin"
            android:layout_height="?actionBarSize"
            android:background="@{viewModel.background}"
            android:visibility="@{viewModel.visibility}"
            app:navigationIcon="@{viewModel.upIcon}"
            app:subtitle="@{viewModel.subTitle}"
            app:subtitleTextColor="@{viewModel.subTitleTextColor}"
            app:title="@{viewModel.title}"
            app:titleDrawableRight="@{viewModel.titleDrawableRight}"
            app:titleMarginStart="@dimen/toolbar_title_padding_left"
            app:titleTextColor="@{viewModel.titleTextColor}">

            <FrameLayout
                android:id="@+id/toolbarCustomView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </android.support.v7.widget.Toolbar>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_elevation"
            android:layout_marginTop="?actionBarSize"
            android:background="@drawable/toolbar_shadow"
            android:visibility="@{viewModel.shadowVisibility}"/>
    </FrameLayout>
</layout>