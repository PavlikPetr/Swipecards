<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.views.toolbar.BaseToolbarViewModel"/>
    </data>

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/toolbar_background_white"
        app:subtitle="@{viewModel.subTitle}"
        app:title="@{viewModel.title}"
        app:titleMarginStart="15dp"
        app:navigationIcon="@{viewModel.upIcon}"
        app:subtitleTextColor="@{viewModel.subTitleTextColor}"
        app:titleDrawableRight = "@{viewModel.titleDrawableRight}"
        app:titleTextColor="@{viewModel.titleTextColor}">
   </android.support.v7.widget.Toolbar>
</layout>