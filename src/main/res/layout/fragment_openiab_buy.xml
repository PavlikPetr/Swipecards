<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.topface.topface.ui.fragments.buy.design.v1.view_models.CoinsBuyingViewModel"/>
    </data>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/products"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:paddingEnd="@dimen/buy_screen_products_list_padding"
        android:paddingLeft="@dimen/buy_screen_products_list_padding"
        android:paddingRight="@dimen/buy_screen_products_list_padding"
        android:paddingStart="@dimen/buy_screen_products_list_padding"
        android:requiresFadingEdge="none"
        app:bindDataToCompositeAdapterWithSmoothUpdate="@{viewModel.data}"
        tools:targetApi="ice_cream_sandwich"/>
</layout>