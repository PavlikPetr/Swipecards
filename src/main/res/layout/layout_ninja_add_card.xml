<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View"/>

        <variable
            name="viewModel"
            type="com.topface.billing.ninja.AddCardViewModel"/>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="20dp">

                <!-- Item description -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:drawableLeft="@drawable/ic_bank_card"
                    android:drawablePadding="14dp"
                    android:gravity="center"
                    android:text="@{viewModel.productTitle}"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="20sp"
                    android:visibility="@{viewModel.titleVisibility}"
                    tools:text=" 7 дней VIP за 40 руб."/>

                <!-- card number -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/NinjaErrorTextAppearance"
                    app:hintTextAppearance="@style/NinjaHintTextAppearance"
                    app:setError="@{viewModel.numberError}">

                    <android.support.design.widget.TextInputEditText
                        style="@style/NinjaInputTextEdit"
                        android:drawableRight="@{viewModel.cardIcon}"
                        android:enabled="@{viewModel.isInputEnabled}"
                        android:hint="@string/ninja_hint_card_number"
                        android:maxLength="@{viewModel.numberMaxLength}"
                        android:text="@={viewModel.numberText}"
                        app:setOnFocusChangeListener="@{viewModel.onNumberChange}"
                        app:setSelection="@{viewModel.numberText.length}"/>
                </android.support.design.widget.TextInputLayout>

                <!-- card additional data -->
                <android.support.percent.PercentFrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- card expires -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/NinjaErrorTextAppearance"
                        app:hintTextAppearance="@style/NinjaHintTextAppearance"
                        app:layout_widthPercent="46%"
                        app:setError="@{viewModel.trhuError}">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/trhu_date"
                            style="@style/NinjaInputTextEdit"
                            android:enabled="@{viewModel.isInputEnabled}"
                            android:hint="@string/ninja_hint_card_expires"
                            android:maxLength="5"
                            android:text="@={viewModel.trhuText}"
                            app:setOnFocusChangeListener="@{viewModel.onTrhuChange}"
                            app:setSelection="@{viewModel.trhuCursorPosition}"/>
                    </android.support.design.widget.TextInputLayout>

                    <!-- CVV/CVC -->
                    <android.support.design.widget.TextInputLayout
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        app:errorEnabled="true"
                        app:errorTextAppearance="@style/NinjaErrorTextAppearance"
                        app:hintTextAppearance="@style/NinjaHintTextAppearance"
                        app:layout_widthPercent="46%"
                        app:setError="@{viewModel.cvvError}">

                        <android.support.design.widget.TextInputEditText
                            style="@style/NinjaInputTextEdit"
                            android:enabled="@{viewModel.isInputEnabled}"
                            android:hint="@string/ninja_hint_cvv"
                            android:inputType="numberPassword"
                            android:maxLength="@{viewModel.cvvMaxLength}"
                            android:text="@={viewModel.cvvText}"
                            app:setOnFocusChangeListener="@{viewModel.onCvvChange}"/>

                    </android.support.design.widget.TextInputLayout>

                </android.support.percent.PercentFrameLayout>

                <!-- Email -->
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.isEmailFormNeeded}"
                    app:errorEnabled="true"
                    app:errorTextAppearance="@style/NinjaErrorTextAppearance"
                    app:hintTextAppearance="@style/NinjaHintTextAppearance"
                    app:setError="@{viewModel.emailError}">

                    <android.support.design.widget.TextInputEditText
                        style="@style/NinjaInputTextEdit"
                        android:enabled="@{viewModel.isInputEnabled}"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:text="@={viewModel.emailText}"/>
                        <!--app:setOnFocusChangeListener="@{viewModel.onEmailChange}"-->
                </android.support.design.widget.TextInputLayout>

                <!-- purchase button -->
                <Button
                    style="@style/PopupGreenButton.Background"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:enabled="@{viewModel.isButtonEnabled &amp;&amp; viewModel.isInputEnabled}"
                    android:minWidth="146dp"
                    android:onClick="@{()->viewModel.onClick()}"
                    android:text="@string/ninja_button_buy"/>

                <!-- connection info -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="20dp"
                        android:layout_height="26dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"
                        android:background="@drawable/ic_lock"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ninja_text_1"
                            android:textColor="@color/dark_primary_text"
                            android:textSize="12sp"
                            tools:text="Безопасный платеж"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/ninja_text_2"
                            android:textColor="@color/gray_primary_text"
                            android:textSize="12sp"
                            tools:text="128-bit SSL Secured"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- auto pay options and description -->
                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:button="@drawable/green_checkbox_selector"
                    android:checked="true"
                    android:enabled="@{viewModel.isButtonEnabled}"
                    android:paddingLeft="12dp"
                    android:text="@string/ninja_checkbox_auto_pay"
                    android:textColor="@color/dark_primary_text"
                    android:textSize="14sp"
                    android:visibility="@{viewModel.isAutoPayDescriptionVisible}"
                    tools:text="Автопополнение счета"/>

                <TextView
                    style="@style/NinjaAutoPayDescription.TopMargin"
                    android:text="@{viewModel.autoPayDescriptionText}"
                    android:visibility="@{viewModel.isAutoPayDescriptionVisible}"
                    tools:text="Услуга позволяет пополнять баланс монет автоматически, при достижении на нём суммы в 5 монет."/>

                <TextView
                    style="@style/NinjaAutoPayDescription.TopMargin"
                    android:text="@string/ninja_text_4"
                    android:visibility="@{viewModel.isAutoPayDescriptionVisible}"
                    tools:text="Включая данную услугу, вы соглашаетесь с"/>

                <!-- todo хотели как-то избавиться от "веб" вида у нас -->
                <!-- надо подождать дизайнерского решения, но пока кликабельно как в веб -->
                <TextView
                    style="@style/NinjaAutoPayDescription"
                    android:onClick="@{()->viewModel.navigateToRules()}"
                    android:text="@string/ninja_text_link"
                    android:textColor="@color/ninja_color_accent"
                    android:visibility="@{viewModel.isAutoPayDescriptionVisible}"
                    tools:text="правилами оказания услуги"/>
            </LinearLayout>
        </ScrollView>

        <TextView
            style="@style/NinjaAutoPayDescription"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:paddingBottom="12dp"
            android:paddingRight="28dp"
            android:paddingTop="12dp"
            android:text="@{viewModel.vipDescriptionText}"
            android:visibility="@{viewModel.isVipDescriptionVisible}"
            tools:text="Через 7 дней действие VIP-статуса будет автоматически продлено. Карта будет сохранена для последующих платежей. Отменить подписку и отвязать карту можно в настройках."/>

        <!-- useless toolbar, need for activity -->
        <include
            android:id="@+id/toolbarInclude"
            layout="@layout/toolbar"
            android:visibility="gone"/>

    </LinearLayout>
</layout>