<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <!-- Profile with background -->
    <RelativeLayout
        android:id="@+id/btnProfileLayoutWithBackground"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/left_menu_background_height"
        android:addStatesFromChildren="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <com.topface.topface.ui.views.ImageViewRemote xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
            ivr:postProcessor="leftMenuClip"
            android:id="@+id/ivProfileBackground"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/left_menu_background_height"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shadow_left_menu_background"
            android:layout_alignParentBottom="true" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="bottom"
            android:layout_alignParentBottom="true"
            android:paddingBottom="6dp">

            <com.topface.topface.ui.views.ImageViewRemote xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
                ivr:postProcessor="mask"
                ivr:clipMask="@drawable/frame_menu_mask"
                android:background="@drawable/frame_menu_big_avatar_selector"
                android:id="@+id/ivMenuAvatarWithBackground"
                android:tag="ivMenuAvatar"
                android:src="@drawable/topface_male_profile_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/btnUserName"
                android:text="@string/general_profile"
                android:paddingLeft="14dp"
                android:background="@android:color/transparent"
                style="@style/LeftMenuButtons"
                android:gravity="bottom"
                android:singleLine="true"
                android:ellipsize="end" />

        </LinearLayout>

        <Button
            android:tag="btnFragmentProfile"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/left_menu_background_height"
            android:background="@drawable/bg_semitransparent_black" />

        <ImageView
            android:tag="profileInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginRight="15dp"
            android:visibility="gone" />
    </RelativeLayout>

    <!-- Profile -->
    <RelativeLayout
        android:id="@+id/btnProfileLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_left_menu_item_selector"
        android:addStatesFromChildren="true"
        android:layout_below="@id/btnProfileLayoutWithBackground">

        <com.topface.topface.ui.views.ImageViewRemote xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
            ivr:postProcessor="mask"
            ivr:clipMask="@drawable/frame_menu_mask"
            android:background="@drawable/frame_menu_selector"
            android:id="@+id/ivMenuAvatar"
            android:tag="ivMenuAvatar"
            android:src="@drawable/topface_male_profile_button"
            android:layout_centerVertical="true"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="8dp" />

        <Button
            android:tag="btnFragmentProfile"
            android:layout_toRightOf="@id/ivMenuAvatar"
            android:layout_centerVertical="true"
            style="@style/LeftMenuButtons"
            android:background="@android:color/transparent"
            android:paddingLeft="12dp"
            android:minHeight="24dp"
            android:text="@string/general_profile"
            />

        <ImageView
            android:tag="profileInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="185dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>
