<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        style="@style/EmptyFeedsViewGravity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            style="@style/EmptyFeedsViewImageVisibility"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_msg" />


        <TextView
            android:id="@+id/tvText"
            style="@style/ListItemEmptyText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/nobody_chat_with_you_sympathies_will_help" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnBuyVip"
                style="@style/BigStretchedBlueButton"
                android:text="@string/buy_resources" />

            <Button
                android:id="@+id/btnStartRate"
                style="@style/BigStretchedGrayButton"
                android:layout_marginTop="12dp"
                android:text="@string/general_get_dating" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>