<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loCounters"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <TextView
        android:id="@+id/tvNotificationDialogs"
        style="@style/NotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topface_notification_dialogs"
        android:gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="11dp"
        android:paddingTop="1dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNotificationLikes"
        style="@style/NotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topface_notification_likes"
        android:gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="11dp"
        android:paddingTop="0dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tvNotificationMutual"
        style="@style/NotificationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/topface_notification_likes"
        android:gravity="center_horizontal"
        android:paddingLeft="4dp"
        android:paddingRight="11dp"
        android:paddingTop="0dp"
        android:visibility="gone" />
</RelativeLayout>