<?xml version="1.0" encoding="utf-8"?>
<!-- User info -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvDatingUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:shadowColor="#666666"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:visibility="gone"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDatingUserCity"
        style="@style/DatingButtonsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tvDatingUserName"
        android:drawableLeft="@drawable/dating_city_pin"
        android:drawablePadding="4dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tvDatingUserStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDatingUserName"
        android:ellipsize="end"
        android:shadowColor="#666666"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1.2"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />
</RelativeLayout>

    
