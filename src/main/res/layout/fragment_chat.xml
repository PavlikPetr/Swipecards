<?xml version="1.0" encoding="utf-8"?>
<com.topface.topface.ui.views.KeyboardListenerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/chatContainer"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <com.topface.PullToRefreshListView xmlns:p2r="http://schemas.android.com/apk/res-auto"
        android:id="@+id/lvChatList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/loChatFooterSend"
        android:background="@color/bg_holo"
        android:cacheColorHint="#00000000"
        android:clickable="true"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:fadeScrollbars="true"
        android:fadingEdge="none"
        android:listSelector="@android:color/transparent"
        android:stackFromBottom="true"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        p2r:ptrHeaderTextColor="#8A8A8A"
        p2r:ptrMode="pullUpFromBottom"
        p2r:ptrOverScroll="false"
        p2r:ptrShowIndicator="false" />

    <RelativeLayout
        android:id="@+id/llvLockScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@id/loChatFooterSend"
        android:visibility="gone">

        <ViewStub
            android:id="@+id/famousBlockerStub"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:inflatedId="@+id/famousBlocker"
            android:layout="@layout/layout_popular_user_blocker" />
    </RelativeLayout>

    <include
        android:id="@id/loChatFooterSend"
        layout="@layout/chat_footer_send_holo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

    <TextView
        android:id="@+id/tvBackgroundText"
        style="@style/BackgroundFont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:drawableLeft="@drawable/loader"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/general_dialog_loading"
        android:visibility="gone" />
</com.topface.topface.ui.views.KeyboardListenerLayout>