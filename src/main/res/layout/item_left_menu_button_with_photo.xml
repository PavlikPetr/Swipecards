<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/LeftMenuViewStyle">

    <com.topface.topface.ui.views.ImageViewRemote xmlns:ivr="http://schemas.android.com/apk/res/com.topface.topface"
        android:id="@+id/image_icon"
        android:layout_width="@dimen/left_menu_background_height"
        android:layout_height="@dimen/left_menu_background_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:background="@drawable/left_menu_rounded_avatar"
        ivr:preProcessor="roundAvatar" />

    <ImageView
        android:id="@+id/image_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/btnMenu"
        style="@style/LeftMenuButtons"
        android:layout_toLeftOf="@id/image_badge"
        android:layout_toRightOf="@id/image_icon" />

</RelativeLayout>