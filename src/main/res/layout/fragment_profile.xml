<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_white"
    android:focusableInTouchMode="true">

    <LinearLayout
        android:id="@+id/tab_layout_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tab_divider"
        android:gravity="center"
        android:orientation="vertical">

        <android.support.design.widget.TabLayout
            android:id="@+id/profileTabs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/tab_text_color" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vpFragments"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/bg_white"
        android:layout_below="@id/tab_layout_wrapper" />

    <com.topface.topface.ui.views.ProgressBarWithAlpha
        android:id="@+id/viewPagerLoader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <View
        android:id="@+id/outsideView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ViewStub
        android:id="@+id/user_actions_stub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp" />

    <RelativeLayout
        android:id="@+id/lockScreen"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_white"
        android:visibility="gone" />

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/llvProfileLoading"
        style="@style/LoadingLocker"
        android:visibility="gone" />

</RelativeLayout>
