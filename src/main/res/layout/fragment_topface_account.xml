<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView_layout"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/fieldContainer_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/edit_big_btn_selector"
                android:gravity="center">

                <EditText
                    android:id="@+id/edText"
                    style="@style/AccountEditText"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tvText"
                    style="@style/ItemTitleText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:padding="4dp"
                    android:singleLine="true"
                    android:textSize="14sp" />
            </RelativeLayout>

            <Button
                android:id="@+id/btnLogout"
                style="@style/Widget.Topface.Button.Big.Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings_logout" />

            <Button
                android:id="@+id/btnChange"
                style="@style/Widget.Topface.Button.Big.Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings_logout"
                android:visibility="gone" />


            <EditText
                android:id="@+id/edCodeConfirmation"
                style="@style/AccountEditText"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="32dp"
                android:focusable="true"
                android:hint="@string/settings_code_confirmation_hint"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCodeSend"
                style="@style/Widget.Topface.Button.Big.Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings_code_confirmation"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnCodeWasSend"
                style="@style/Widget.Topface.Button.Big.Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/settings_email_was_confirmed"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnChangeEmail"
                style="@style/Widget.Topface.Button.Big.Gray"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/btn_gray_selector"
                android:text="@string/change_email"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnDeleteAccount"
        style="@style/Widget.Topface.Button.Big.Gray"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/settings_delete_account" />

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/llvLogoutLoading"
        style="@style/LoadingLocker"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
</LinearLayout>
