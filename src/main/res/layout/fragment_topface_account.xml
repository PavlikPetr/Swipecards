<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_white">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="8dp">

        <RelativeLayout
            android:id="@+id/fieldContainer_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:background="@drawable/edit_big_btn_selector">

            <EditText
                android:id="@+id/edText"
                style="@style/ItemWhiteText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:background="@drawable/city_editbox_selector"
                android:singleLine="true"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:padding="4dp"
                android:textSize="14sp"
                style="@style/ItemTitleText"
                android:drawablePadding="5dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btnLogout"
            style="@style/WhiteButtonWithSeparator"
            android:text="@string/settings_logout"/>

        <Button
            android:id="@+id/btnChange"
            android:text="@string/settings_logout"
            style="@style/WhiteButtonWithSeparator"
            tools:visibility="visible"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnChangeEmail"
            android:text="@string/change_email"
            style="@style/WhiteButtonWithSeparator"
            tools:visibility="visible"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnDeleteAccount"
            style="@style/WhiteButtonWithSeparator"
            android:text="@string/settings_delete_account"/>
    </LinearLayout>

    <com.topface.topface.ui.views.LockerView
        android:id="@+id/llvLogoutLoading"
        style="@style/LoadingLocker"
        android:visibility="gone"/>
</RelativeLayout>