<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:gravity="right">

    <include
        android:id="@+id/loDateDivider"
        layout="@layout/chat_date_divider" />

    <!-- message -->
    <TextView
        android:id="@+id/chat_message"
        style="@style/ChatMessage"
        android:layout_alignParentRight="true"
        android:layout_below="@id/loDateDivider"
        android:paddingLeft="13dp"
        android:paddingRight="21dp" />

    <!-- date -->
    <TextView
        android:id="@+id/chat_date"
        style="@style/ChatDate"
        android:layout_alignBottom="@id/chat_message"
        android:layout_toLeftOf="@id/chat_message" />

</RelativeLayout>    
