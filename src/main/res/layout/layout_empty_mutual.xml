<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="lockViewModel"
            type="com.topface.topface.ui.fragments.feed.mutual.MutualLockScreenViewModel" />

    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:fadingEdge="none"
        android:fillViewport="true">

        <LinearLayout
            style="@style/EmptyFeedsViewGravity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                style="@style/LandscapePortraitImagesVisibility"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_mutual" />

            <TextView
                android:id="@+id/tvText"
                style="@style/ListItemEmptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:maxWidth="290dp"
                android:text="@string/nobody_chat_with_you_sympathies_will_help" />

            <Button
                android:id="@+id/btnRefill"
                style="@style/BigStretchedBlueButton"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:onClick="@{() -> lockViewModel.onGoToPurchaseCoins()}"
                android:text="@string/buy_resources" />

            <Button
                android:id="@+id/btnGetDating"
                style="@style/BigStretchedGrayButton"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="12dp"
                android:onClick="@{() -> lockViewModel.onGoToDatingClick()}"
                android:text="@string/general_get_dating" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</layout>