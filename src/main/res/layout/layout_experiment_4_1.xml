<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="viewModel"
                  type="com.topface.topface.ui.dialogs.trial_vip_experiment.Experiment41ViewModel"/>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/left_user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:src="@{viewModel.randomLeftPhoto}"
            app:animationSrc="@{@anim/move_to_left}"/>
        <ImageView
            android:id="@+id/right_user_img"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="86dp"
            android:src="@{viewModel.randomRightPhoto}"
            app:animationSrc="@{@anim/move_to_right}"/>
        <com.topface.topface.ui.views.ImageViewRemote
            android:id="@+id/user_avatar"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            app:postProcessor="inscribedAvatar"
            app:remoteSrc="@{viewModel.userAvatar}"
            app:roundedImgBorderColor="@android:color/white"
            app:roundedImgBorderWidth="3dp"/>
        <ImageView
            android:id="@+id/circle_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar"
            android:layout_toEndOf="@+id/user_avatar"
            android:layout_toRightOf="@+id/user_avatar"
            android:src="@drawable/circle"/>
        <ImageView
            android:id="@+id/search_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/user_avatar"
            android:layout_toLeftOf="@+id/user_avatar"
            android:layout_toStartOf="@+id/user_avatar"
            android:src="@drawable/search"/>
        <ImageView
            android:id="@+id/eye"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/left_user_img"
            android:layout_alignStart="@+id/left_user_img"
            android:layout_below="@+id/left_user_img"
            android:src="@drawable/eye"/>
        <ImageView
            android:id="@+id/profile_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_avatar"
            android:layout_marginTop="-16dp"
            android:layout_toLeftOf="@+id/user_avatar"
            android:layout_toStartOf="@+id/user_avatar"
            android:src="@drawable/profile"/>

        <TextView
            android:id="@+id/buy_vip_banner"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:padding="8dp"
            android:textColor="#de000000"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:layout_below="@+id/eye"
            android:text="@{viewModel.vipBannerText}"/>
    </RelativeLayout>
</layout>

