<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:bind="http://schemas.android.com/tools">

    <data>

        <variable
            name="toolbarViewModel"
            type="com.topface.topface.ui.views.toolbar.view_models.BaseToolbarViewModel"/>

        <variable
            name="viewModel"
            type="com.topface.topface.viewModels.RedesignedNavigationActivityViewModel"/>

    </data>

    <com.topface.topface.ui.views.HackyDrawerLayout
        android:id="@+id/loNavigationDrawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_white"
        android:fitsSystemWindows="@{viewModel.fitSystemWindow}">

        <include
            android:id="@+id/navigation_app_bar"
            layout="@layout/app_bar_new"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            bind:viewModel="@{toolbarViewModel}"/>

        <FrameLayout
            android:id="@+id/fragment_menu"
            android:layout_width="@dimen/left_menu_width"
            android:layout_height="match_parent"
            android:layout_gravity="left"/>

    </com.topface.topface.ui.views.HackyDrawerLayout>
</layout>