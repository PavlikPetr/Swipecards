<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <include
            android:id="@+id/loAccount"
            layout="@layout/item_edit_form_select" />

        <TextView
            android:id="@+id/loNotifications"
            style="@style/WhiteListItem.Underline"
            android:text="@string/notifications" />

        <TextView
            android:id="@+id/loHelp"
            style="@style/WhiteListItem.Underline"
            android:text="@string/settings_help" />

        <TextView
            android:id="@+id/loFeedback"
            style="@style/WhiteListItem.Underline"
            android:text="@string/settings_feedback" />

        <TextView
            android:id="@+id/loLanguage"
            style="@style/WhiteListItem.Underline"
            android:text="@string/settings_select_language" />

        <include
            android:id="@+id/loPreloadPhoto"
            layout="@layout/item_edit_form_select" />

        <TextView
            android:id="@+id/loAbout"
            style="@style/WhiteListItem.Underline"
            android:text="@string/settings_about" />
    </LinearLayout>
</ScrollView>
