<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема приложения -->
    <style name="Theme._Topface" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_accent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- overflow menu settings -->
        <item name="android:itemTextAppearance">@style/PopupMenuTextApearance</item>
        <item name="android:dropDownListViewStyle">@style/FilterSpinnerDropDownList</item>
        <item name="android:popupMenuStyle" tools:ignore="NewApi">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowDropDownMenu</item>

        <item name="android:windowTitleStyle">@style/CenterJustifyDialogTitle</item>

        <!-- Тема индикаторов для ViewPager -->
        <item name="android:textAppearanceLarge">@style/TopfaceTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/TopfaceTextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TopfaceTextAppearance.Small</item>
        <!-- Начертание шрифта -->
        <item name="android:typeface">sans</item>
        <!-- Цвет ссылок (для TextView свойства autoLink)  -->
        <!-- Убирает капс на Lollipop, нужен только для >5.0  -->
        <item name="android:textAllCaps" tools:ignore="NewApi">false</item>
        <item name="android:textColorLink">#2371B9</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/topfaceAutoCompleteEditText</item>
        <item name="android:dropDownItemStyle">@style/topfaceDropDownItemStyle</item>
        <item name="android:listPreferredItemHeight">32dp</item>
        <item name="android:checkboxStyle">@style/topfaceCheckbox</item>
        <item name="android:windowBackground">@color/bg_holo</item>
        <item name="android:progressBarStyle">@style/TopFaceProgressBar</item>
        <!-- Стилизованные кнопки -->
        <item name="blueButtonStyle">@style/BlueBonusButton</item>
        <item name="grayButtonStyle">@style/GrayBonusButton</item>
        <!-- ActionBar  -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionBarStyle">@style/Widget.Topface.ActionBar</item>
        <item name="actionBarItemBackground">@drawable/bg_semitransparent_black_selector</item>
        <item name="selectableItemBackground">@drawable/bg_semitransparent_black_selector</item>
        <!-- Action Mode (CAB)-->
        <item name="actionModeBackground">@color/action_mode_color</item>
        <item name="actionModeCloseDrawable">@drawable/ic_check</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.Topface" parent="Theme._Topface"></style>

    <!-- transparent activity theme -->
    <style name="Theme.Transparent" parent="Topface.Theme.TransparentActionBarActivity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="NoWindowAnimation" parent="Theme.Topface">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="AboutApp" parent="Theme.Topface">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EditDialog" parent="Theme.Topface">
        <item name="android:checkboxStyle">@style/CheckboxLeft</item>
        <item name="android:background">@color/bg_white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowCloseOnTouchOutside" tools:ignore="NewApi">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="EditDialog.Text">
        <item name="android:windowSoftInputMode">stateVisible</item>
    </style>

    <style name="CheckboxLeft">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/selector_checkbox</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingLeft">30dp</item>
    </style>

    <!-- Светлая тема приложения -->
    <style name="Theme.Topface.Light" parent="@style/Theme.Topface">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
    </style>


    <style name="Theme.Topface.Navigation" parent="Theme.Topface">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="homeAsUpIndicator">@null</item>
        <item name="android:homeAsUpIndicator">@null</item>
    </style>

    <style name="Theme.Topface.NoActionBar.Fullscreen" parent="Theme.Topface.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Topface.OldDarkDesign">
        <item name="android:background">@color/bg_main</item>
    </style>

    <style name="Theme.Topface.Ban">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Theme.Topface.RestoreAccountActivity" parent="Theme.Topface">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Theme.Topface.NoActionBar" parent="Theme.Topface">
        <item name="android:windowNoTitle">true</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="Theme.Topface.NoActionBar.DatingLockPopup">
        <item name="android:statusBarColor" tools:ignore="NewApi">
            @color/status_bar_dating_lock_popup_color
        </item>
    </style>

    <style name="Theme.Topface.NoActionBar.TrialVipPopup">
        <item name="android:statusBarColor" tools:ignore="NewApi">
            @color/trial_popup_background
        </item>
    </style>

    <style name="Theme.Topface.NoActionBar.Filterlist" parent="Theme.Topface.NoActionBar">
        <item name="android:windowBackground">@drawable/filter_dialog_background</item>
    </style>

    <style name="Theme.Topface.White">
        <item name="actionBarStyle">@style/Widget.Topface.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Topface.Theme.TranslucentDialog" parent="Theme.Topface">
        <item name="android:windowBackground">@color/bg_white</item>
        <item name="android:colorBackground">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">@color/list_text_black</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
    </style>

    <style name="Topface.Theme.TransparentActionBarActivity" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.Topface.TransparentActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/album_background</item>
    </style>

    <style name="Theme.Topface.Chat" parent="NoWindowAnimation">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Theme.Topface.Gifts">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="FullyTranslucent" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>
</resources>
