<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема приложения -->
    <style name="Theme.Topface" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/light_theme_color_primary</item>
        <item name="colorPrimaryDark">@color/light_theme_color_primary_dark</item>
        <item name="colorAccent">@color/light_theme_color_accent</item>
        <item name="android:windowContentOverlay">@null</item>

        <!-- overflow menu settings -->
        <item name="android:itemTextAppearance">@style/PopupMenuTextApearance</item>
        <item name="android:dropDownListViewStyle">@style/FilterSpinnerDropDownList</item>
        <item name="android:popupMenuStyle" tools:ignore="NewApi">@style/PopupMenu</item>
        <item name="actionOverflowMenuStyle">@style/OverflowDropDownMenu</item>

        <item name="android:windowTitleStyle">@style/CenterJustifyDialogTitle</item>

        <!-- Тема индикаторов для ViewPager -->
        <item name="vpiIconPageIndicatorStyle">@style/Widget.TopfaceIconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TopfaceTabPageIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/TopfaceCirclePageIndicator</item>
        <item name="android:textAppearanceLarge">@style/TopfaceTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/TopfaceTextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TopfaceTextAppearance.Small</item>
        <!-- Начертание шрифта -->
        <item name="android:typeface">sans</item>
        <!-- Цвет ссылок (для TextView свойства autoLink)  -->
        <!-- Убирает капс на Lollipop, нужен только для >5.0  -->
        <item name="android:textAllCaps">false</item>
        <item name="android:textColorLink">#2371B9</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
        <item name="android:autoCompleteTextViewStyle">@style/topfaceAutoCompleteEditText</item>
        <item name="android:dropDownItemStyle">@style/topfaceDropDownItemStyle</item>
        <item name="android:listPreferredItemHeight">32dp</item>
        <item name="android:checkboxStyle">@style/topfaceCheckbox</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:progressBarStyle">@style/TopFaceProgressBar</item>
        <!-- Стилизованные кнопки -->
        <item name="blueButtonStyle">@style/Widget.Topface.Button.Big.Blue</item>
        <item name="grayButtonStyle">@style/Widget.Topface.Button.Big.Gray</item>

        <!-- ActionBar  -->
        <item name="actionBarStyle">@style/Widget.Topface.ActionBar</item>
        <item name="actionBarItemBackground">@drawable/bg_semitransparent_black_selector</item>
        <item name="selectableItemBackground">@drawable/bg_semitransparent_black_selector</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
        <!-- Action Mode (CAB)-->
        <item name="actionModeBackground">@color/bg_action_mode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_check</item>

        <item name="android:windowDrawsSystemBarBackgrounds" tools:ignore="NewApi">false</item>
    </style>

    <!-- transparent activity theme -->
    <style name="Theme.Transparent" parent="Topface.Theme.TransparentActionBarActivity">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- Светлая тема приложения -->
    <style name="Theme.Topface.Light" parent="@style/Theme.Topface">
        <item name="android:autoCompleteTextViewStyle">@style/AutoCompleteTextViewStyle</item>
    </style>

    <style name="Theme.Topface.ActionbarOverlay" parent="Theme.Topface">
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowActionBarOverlay" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.Topface.NoActionBar.Fullscreen" parent="Theme.Topface.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Topface.OldDarkDesign">
        <item name="android:background">@color/bg_main</item>
    </style>

    <style name="Theme.Topface.Ban">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Theme.Topface.RestoreAccountActivity" parent="Theme.Topface">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Theme.Topface.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!--Action Bar-->
        <item name="windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Theme.Topface.White">
        <item name="actionBarStyle">@style/Widget.Topface.ActionBar</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

    <style name="Topface.Theme.TranslucentDialog" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/semitransparent_black</item>
        <item name="android:colorBackground">@color/semitransparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
    </style>

    <style name="Topface.Theme.TransparentActionBarActivity" parent="@style/Theme.AppCompat">
        <item name="actionBarStyle">@style/Widget.Topface.TransparentActionBar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/album_background</item>
    </style>

    <style name="Theme.Topface.Chat">
        <item name="android:windowBackground">@color/bg_holo</item>
    </style>

    <style name="Theme.Topface.Gifts">
        <item name="android:windowBackground">@color/bg_white</item>
    </style>

</resources>
