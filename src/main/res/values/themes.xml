<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Базовая тема приложения -->
    <style name="Theme.Topface" parent="@style/Theme.AppCompat">
        <!-- Тема индикаторов для ViewPager -->
        <item name="vpiIconPageIndicatorStyle">@style/Widget.TopfaceIconPageIndicator</item>
        <item name="vpiTabPageIndicatorStyle">@style/Widget.TopfaceTabPageIndicator</item>
        <item name="vpiCirclePageIndicatorStyle">@style/TopfaceCirclePageIndicator</item>
        <item name="android:textAppearanceLarge">@style/TopfaceTextAppearance.Large</item>
        <item name="android:textAppearanceMedium">@style/TopfaceTextAppearance.Medium</item>
        <item name="android:textAppearanceSmall">@style/TopfaceTextAppearance.Small</item>
        <!-- Начертание шрифта -->
        <item name="android:typeface">sans</item>
        <!-- Цвет ссылок (для TextView свойства autoLink)  -->
        <item name="android:textColorLink">#2371B9</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
        <item name="android:checkboxStyle">@style/topfaceCheckbox</item>
        <item name="android:windowBackground">@null</item>
        <item name="android:windowContentOverlay">@drawable/actionbar_shadow</item>
        <!-- Стилизованные кнопки -->
        <item name="blueButtonStyle">@style/Widget.Topface.Button.Big.Blue</item>
        <item name="grayButtonStyle">@style/Widget.Topface.Button.Big.Gray</item>

        <!-- ActionBar  -->
        <item name="actionBarStyle">@style/Widget.Topface.ActionBar</item>
        <item name="actionBarItemBackground">@drawable/bg_semitransparent_black_selector</item>

        <item name="android:actionBarStyle" tools:ignore="NewApi">
            @style/Widget.Topface.ActionBar
        </item>
        <item name="android:actionBarItemBackground" tools:ignore="NewApi">
            @drawable/bg_semitransparent_black_selector
        </item>

        <!-- Action Mode (CAB)-->
        <item name="actionModeBackground">@color/bg_action_mode</item>
        <item name="actionModeCloseDrawable">@drawable/ic_check</item>

        <item name="android:actionModeBackground" tools:ignore="NewApi">@color/bg_action_mode
        </item>
        <item name="android:actionModeCloseDrawable" tools:ignore="NewApi">@drawable/ic_check</item>
    </style>

    <style name="Theme.Topface.NoActionBar.Fullscreen" parent="Theme.Topface.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Theme.Topface.NoActionBar" parent="Theme.Topface">
        <item name="android:windowNoTitle">true</item>
        <!--Action Bar-->
        <item name="android:windowActionBar" tools:ignore="NewApi">false</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="Topface.Theme.TranslucentDialog" parent="@style/Theme.AppCompat.Light">
        <item name="android:windowBackground">@color/semitransparent_black</item>
        <item name="android:colorBackground">@color/semitransparent_black</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextStyle">@style/topfaceEditText</item>
    </style>

</resources>