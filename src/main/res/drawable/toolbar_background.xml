<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:bottom="@dimen/toolbar_elevation">
        <shape>
            <solid android:color="@color/toolbar_background_white"/>
            <size android:height="?attr/actionBarSize"/>
        </shape>
    </item>
    <item android:top="?attr/actionBarSize">
        <shape>
            <size android:height="@dimen/toolbar_elevation"/>
            <gradient
                android:angle="270"
                android:endColor="@color/toolbar_shadow_end_color"
                android:startColor="@color/toolbar_shadow_start_color"/>
        </shape>
    </item>
</layer-list>