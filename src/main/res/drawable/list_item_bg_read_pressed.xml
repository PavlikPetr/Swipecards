<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="-1dp"
        android:left="-1dp"
        android:right="-1dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="@color/list_item_divider_normal"/>

            <solid android:color="@color/list_item_read_pressed"/>

            <padding
                android:left="10dp"
                android:right="12dp"
                android:top="8dp"
                android:bottom="8dp"/>
        </shape>
    </item>

</layer-list>