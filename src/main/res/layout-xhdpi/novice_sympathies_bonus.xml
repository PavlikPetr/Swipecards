<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivBackground"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="fitXY" />

    <ImageView
        android:id="@+id/ivMask"
        android:layout_width="79dp"
        android:layout_height="51dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:src="@drawable/tip_battery_bonus_mask"
        android:layout_marginTop="22dp" />

    <ImageView
        android:id="@+id/ivArrow"
        android:layout_width="356.5dp"
        android:layout_height="324.5dp"
        android:layout_toRightOf="@id/ivMask"
        android:layout_alignParentTop="true"
        android:src="@drawable/tip_battery_bonus_arrow"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="-70dp" />

    <com.topface.topface.ui.views.AutoResizeTextView
        android:id="@+id/ivBubble"
        android:layout_width="303.5dp"
        android:layout_height="173.5dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/ivArrow"
        android:background="@drawable/tip_energy_bubble"
        android:gravity="center"
        android:lines="5"
        android:text="@string/novice_sympathies_bonus"
        android:textColor="#000000"
        android:textSize="18sp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginTop="-10dp" />

</RelativeLayout>