<?xml version="1.0" encoding="utf-8"?>
<manifest
    package="com.topface.topface"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:installLocation="auto"
    android:versionCode="108"
    android:versionName="2.9.9"
    tools:ignore="UnusedAttribute">

    <!-- permissions -->
    <permission
        android:name="com.topface.topface.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.topface.topface.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <!-- Разрешения для Fortumo -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_home_topface_white"
        android:theme="@style/Theme.Topface">

        <meta-data android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            tools:replace="value"
            />

        <!-- activity -->
        <activity
            android:name=".ui.NavigationActivity"
            android:configChanges="locale|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.ActionbarOverlay"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />


                <data
                    android:host="topface.com"
                    android:pathPrefix="/profile"
                    android:scheme="http" />

                <data
                    android:host="topface.ru"
                    android:pathPattern="/profile"
                    android:scheme="http" />

                <data
                    android:host="topface.com"
                    android:pathPrefix="/confirm"
                    android:scheme="http" />

                <data
                    android:host="topface.ru"
                    android:pathPrefix="/confirm"
                    android:scheme="http" />

                <data
                    android:host="topface.com"
                    android:pathPattern="/profile"
                    android:scheme="https" />

                <data
                    android:host="topface.ru"
                    android:pathPattern="/profile"
                    android:scheme="https" />

                <data
                    android:host="topface.com"
                    android:pathPrefix="/confirm"
                    android:scheme="https" />

                <data
                    android:host="topface.ru"
                    android:pathPrefix="/confirm"
                    android:scheme="https" />

                />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="offerwall"
                    android:scheme="topface" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="topface"

                    />
            </intent-filter>
        </activity>

        <activity
            android:name=".utils.social.VkAuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.NoActionBar">

        </activity>

        <activity
            android:name=".ui.CitySearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.fragments.profile.PhotoSwitcherActivity"
            android:theme="@style/Theme.Topface.NoActionBar.Fullscreen" />
        <activity
            android:name=".ui.edit.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.edit.EditContainerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.GiftsActivity" />
        <activity
            android:name=".ui.LeadersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.settings.SettingsContainerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.BanActivity" />
        <activity android:name=".ui.BlackListActivity" />
        <activity
            android:name=".ui.ContainerActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.PaymentwallActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ru.ok.android.sdk.OkAuthActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ok192696576"
                    android:scheme="okauth" />

            </intent-filter>
        </activity>

        <!-- ADS -->

        <activity
            android:name="com.inneractive.api.ads.InneractiveFullScreenView"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.tapjoy.TJCOffersWebView"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.tapjoy.TapjoyVideoView"
            android:configChanges="keyboardHidden|orientation" />

        <activity
            android:name="com.sponsorpay.sdk.android.publisher.OfferWallActivity"
            android:configChanges="orientation" />

        <!-- Мета-данные для clickky -->
        <meta-data
            android:name="CLICKKY_API_KEY"
            android:value="c2441dedd5b0e62a7acadbdb5a43c8d2" />
        <meta-data
            android:name="CLICKKY_SITE_ID"
            android:value="3382" />

        <activity
            android:name="com.getjar.sdk.rewards.GetJarActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.mopub.mobileads.MraidBrowser"
            android:configChanges="keyboardHidden|orientation" />

        <activity
            android:name="com.lifestreet.android.lsmsdk.ads.InterstitialAdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.lifestreet.android.lsmsdk.mraid.MRAIDActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.lifestreet.android.lsmsdk.mraid.MRAIDInterstitialActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name=".utils.offerwalls.supersonicads.SupersonicWallActivity"
            android:theme="@style/Theme.Topface.NoActionBar" />

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Topface.NoActionBar" />

        <!-- Алиас для главной активити из первой версии. На всякий случай, а то раньше уже были проблемы с FB -->
        <activity-alias
            android:name=".ui.MainActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <activity-alias
            android:name=".ui.AuthActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <!-- services -->
        <service android:name="com.topface.billing.googleplay.BillingService" />
        <service android:name="com.getjar.sdk.rewards.GetJarService" />

        <!-- receivers -->
        <receiver
            android:name="com.topface.billing.googleplay.BillingReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receivers.TestNotificationsReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.topface.topface.actions.NOTIFY" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_ON" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_OFF" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_CANCEL" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.getjar.sdk.data.metadata.PackageMonitor"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>

        <!-- gcm -->
        <service android:name=".GCMIntentService" />
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.topface.topface" />
            </intent-filter>
        </receiver>

        <!-- Amazon In-App Purchasing -->
        <receiver
            android:name="com.amazon.inapp.purchasing.ResponseReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action
                    android:name="com.amazon.inapp.purchasing.NOTIFY"
                    android:permission="com.amazon.inapp.purchasing.Permission.NOTIFY" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.appsflyer.MultipleInstallBroadcastReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.sponsorpay.sdk.android.advertiser.InstallReferrerReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>


    </application>

</manifest>

