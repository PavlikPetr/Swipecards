<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.topface.topface"
    android:installLocation="auto"
    tools:ignore="UnusedAttribute">

    <!-- permissions -->
    <permission
        android:name="com.topface.topface.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.topface.topface.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-permission android:name="com.android.vending.BILLING" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <!-- Fortumo permissions -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:resizeable="true"
        android:smallScreens="true" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_home_topface_white"
        android:supportsRtl="false"
        android:theme="@style/Theme.Topface">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version"
            tools:replace="value" />

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <!-- activity -->
        <activity
            android:name=".ui.NavigationActivity"
            android:configChanges="locale|screenSize|orientation"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.ActionbarOverlay"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />


                <data
                    android:host="topface.com"
                    android:pathPrefix="/profile"
                    android:scheme="http" />

                <data
                    android:host="topface.ru"
                    android:pathPattern="/profile"
                    android:scheme="http" />

                <data
                    android:host="topface.com"
                    android:pathPrefix="/confirm"
                    android:scheme="http" />

                <data
                    android:host="topface.ru"
                    android:pathPrefix="/confirm"
                    android:scheme="http" />

                <data
                    android:host="topface.com"
                    android:pathPattern="/profile"
                    android:scheme="https" />

                <data
                    android:host="topface.ru"
                    android:pathPattern="/profile"
                    android:scheme="https" />

                <data
                    android:host="topface.com"
                    android:pathPrefix="/confirm"
                    android:scheme="https" />

                <data
                    android:host="topface.ru"
                    android:pathPrefix="/confirm"
                    android:scheme="https" />

                <data
                    android:host="@string/offerwall_host"
                    android:scheme="@string/default_sheme" />

                <data android:scheme="@string/default_sheme" />

            </intent-filter>
        </activity>


        <activity
            android:name=".ui.AddToLeaderActivity"
            android:parentActivityName=".ui.NavigationActivity" />
        <activity
            android:name=".ui.SslErrorActivity"
            android:launchMode="singleTask"
            android:theme="@style/Theme.Transparent" />
        <activity
            android:name=".ui.GiftsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.Gifts" />
        <activity
            android:name=".ui.TopfaceAuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.NoActionBar" />
        <activity
            android:label="@string/edit_my_city"
            android:name=".ui.CitySearchActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.Light"
            android:windowSoftInputMode="stateVisible" />
        <activity
            android:name=".ui.fragments.profile.PhotoSwitcherActivity"
            android:theme="@style/Topface.Theme.TransparentActionBarActivity" />
        <activity
            android:name=".ui.edit.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.edit.EditContainerActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.Light" />
        <activity
            android:name=".ui.settings.SettingsContainerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.BanActivity"
            android:theme="@style/Theme.Topface.Ban"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.RestoreAccountActivity"
            android:theme="@style/Theme.Topface.RestoreAccountActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".ui.BlackListActivity" />

        <activity
            android:name=".ui.ChatActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:theme="@style/Theme.Topface.Chat"
            android:windowSoftInputMode="adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.UserProfileActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.OwnProfileActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.OwnGiftsActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.Gifts">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.ComplainsActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.SettingsActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.EditorBannersActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.EditorProfileActionsActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.RegistrationActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.PasswordRecoverActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.PurchasesActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.CoinsSubscriptionsActivity"
            android:parentActivityName=".ui.NavigationActivity"
            android:screenOrientation="portrait">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity
            android:name=".ui.ComplainsMessageActivity"
            android:parentActivityName=".ui.ComplainsActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysVisible|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.ComplainsActivity" />
        </activity>

        <activity
            android:name=".ui.PaymentwallActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name="ru.ok.android.sdk.OkAuthActivity"
            android:configChanges="orientation"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ok192696576"
                    android:scheme="okauth" />

            </intent-filter>
        </activity>

        <activity android:name="com.facebook.LoginActivity" />

        <!-- ADS -->

        <activity
            android:name="com.google.android.gms.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.sponsorpay.publisher.ofw.SPOfferWallActivity"
            android:configChanges="orientation" />

        <activity
            android:name=".utils.offerwalls.supersonicads.SupersonicWallActivity"
            android:theme="@style/Theme.Topface.NoActionBar" />

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@style/Theme.Topface.NoActionBar" />

        <!-- Alias for main Activity from first version. Just in case of previous problems with FB -->
        <activity-alias
            android:name=".ui.MainActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <activity-alias
            android:name=".ui.AuthActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <!-- Topface offerwall -->
        <activity
            android:name="com.topface.offerwall.publisher.TFOfferwallActivity"
            android:icon="@drawable/ic_home_topface_white"
            android:parentActivityName=".ui.PurchasesActivity" />

        <receiver
            android:name=".receivers.TestNotificationsReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.topface.topface.actions.NOTIFY" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_ON" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_OFF" />
                <action android:name="com.topface.topface.actions.TEST_NETWORK_ERRORS_CANCEL" />
            </intent-filter>
        </receiver>

        <!-- gcm -->
        <service android:name=".GcmIntentService" />
        <receiver
            android:name=".utils.gcmutils.GcmBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.topface.topface" />
            </intent-filter>
        </receiver>

        <!-- Amazon In-App Purchasing -->
        <!--suppress AndroidDomInspection -->
        <receiver
            android:name="com.amazon.inapp.purchasing.ResponseReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action
                    android:name="com.amazon.inapp.purchasing.NOTIFY"
                    android:permission="com.amazon.inapp.purchasing.Permission.NOTIFY" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.appsflyer.MultipleInstallBroadcastReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <service android:name="com.google.android.gms.analytics.CampaignTrackingService" />

        <receiver
            android:name="com.google.android.gms.analytics.CampaignTrackingReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.sponsorpay.advertiser.InstallReferrerReceiver"
            android:exported="true"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receivers.NotificationClosedReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.topface.topface.NOTIFICATION_CLOSED" />
            </intent-filter>
        </receiver>

    </application>

</manifest>

