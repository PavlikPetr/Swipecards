<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.topface.topface"
    android:installLocation="auto"

    android:versionCode="97"
    android:versionName="2.8.4">

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <!-- permissions -->
    <permission
        android:name="com.topface.topface.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.topface.topface.permission.C2D_MESSAGE" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="com.android.vending.BILLING" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.location.network"
        android:required="false" />

    <!-- Разрешения для Fortumo -->
    <uses-feature
        android:name="android.hardware.telephony"
        android:required="false" />

    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />

    <supports-screens
        android:resizeable="true"
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true"
        android:anyDensity="true" />

    <application
        android:allowBackup="true"
        android:name=".App"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_home_topface_white"
        android:label="@string/app_name"
        android:theme="@style/Theme.Topface">

        <!-- Тип сборки. При релизе приложения не забываем его указать! -->
        <meta-data
            android:name="com.topface.topface.build"
            android:value="@string/build_default" />

        <uses-library
            android:required="false"
            android:name="com.google.android.maps" />

        <!-- activity -->
        <activity
            android:name=".ui.NavigationActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />


                <data
                    android:scheme="http"
                    android:host="topface.com"
                    android:pathPrefix="/profile" />

                <data
                    android:scheme="http"
                    android:host="topface.ru"
                    android:pathPattern="/profile" />

                <data
                    android:scheme="http"
                    android:host="topface.com"
                    android:pathPrefix="/confirm" />

                <data
                    android:scheme="http"
                    android:host="topface.ru"
                    android:pathPrefix="/confirm" />

                <data
                    android:scheme="https"
                    android:host="topface.com"
                    android:pathPattern="/profile" />

                <data
                    android:scheme="https"
                    android:host="topface.ru"
                    android:pathPattern="/profile" />

                <data
                    android:scheme="https"
                    android:host="topface.com"
                    android:pathPrefix="/confirm" />

                <data
                    android:scheme="https"
                    android:host="topface.ru"
                    android:pathPrefix="/confirm" />

                />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:scheme="topface"
                    android:host="offerwall" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="topface"

                    />
            </intent-filter>
        </activity>

        <activity
            android:name=".utils.social.VkAuthActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.Topface.NoActionBar">

        </activity>

        <activity
            android:name=".ui.CitySearchActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".ui.GeoMapActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".ui.profile.PhotoSwitcherActivity"
            android:theme="@style/Theme.Topface.NoActionBar.Fullscreen" />
        <activity
            android:name=".ui.edit.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.edit.EditContainerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.GiftsActivity" />
        <activity
            android:name=".ui.LeadersActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.settings.SettingsContainerActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.BanActivity" />
        <activity android:name=".ui.profile.BlackListActivity" />
        <activity
            android:name=".ui.ContainerActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".ui.NavigationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.NavigationActivity" />
        </activity>

        <activity android:name=".ui.PaymentwallActivity" />

        <activity
            android:name="ru.ok.android.sdk.OkAuthActivity"
            android:launchMode="singleTask"
            android:configChanges="orientation">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data
                    android:host="ok192696576"
                    android:scheme="okauth" />

            </intent-filter>
        </activity>

        <!-- ADS -->

        <activity
            android:name="com.inneractive.api.ads.InneractiveFullScreenView"
            android:configChanges="orientation|screenSize" />

        <activity
            android:name="com.google.ads.AdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.tapjoy.TJCOffersWebView"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.tapjoy.TapjoyVideoView"
            android:configChanges="keyboardHidden|orientation" />

        <activity
            android:name="com.sponsorpay.sdk.android.publisher.OfferWallActivity"
            android:configChanges="orientation" />

        <activity android:name="com.topface.topface.utils.offerwalls.clickky.ClickkyActivity" />

        <activity
            android:name="com.getjar.sdk.rewards.GetJarActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.mopub.mobileads.MoPubActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.mopub.mobileads.MraidActivity"
            android:configChanges="keyboardHidden|orientation" />
        <activity
            android:name="com.mopub.mobileads.MraidBrowser"
            android:configChanges="keyboardHidden|orientation" />

        <activity
            android:name="com.lifestreet.android.lsmsdk.ads.InterstitialAdActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <activity
            android:name="com.lifestreet.android.lsmsdk.mraid.MRAIDActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize" />

        <service
            android:name="org.OpenUDID.OpenUDID_service"
            tools:ignore="InnerclassSeparator">
            <intent-filter>
                <action android:name="org.openudid.GETUDID" />
            </intent-filter>
        </service>

        <!-- Алиас для главной активити из первой версии. На всякий случай, а то раньше уже были проблемы с FB -->
        <activity-alias
            android:name=".ui.MainActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <activity-alias
            android:name=".ui.AuthActivity"
            android:targetActivity=".ui.NavigationActivity" />

        <!-- services -->
        <service android:name="com.topface.billing.googleplay.BillingService" />
        <service android:name="com.getjar.sdk.rewards.GetJarService" />

        <!-- receivers -->
        <receiver
            android:name="com.topface.billing.googleplay.BillingReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY" />
                <action android:name="com.android.vending.billing.RESPONSE_CODE" />
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".receivers.TestNotificationsReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.topface.topface.NOTIFY" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.getjar.sdk.data.metadata.PackageMonitor"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />

                <data android:scheme="package" />
            </intent-filter>
        </receiver>


        <!-- gcm -->
        <service android:name=".GCMIntentService" />
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.topface.topface" />
            </intent-filter>
        </receiver>

        <!-- Amazon In-App Purchasing -->
        <receiver
            android:name="com.amazon.inapp.purchasing.ResponseReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action
                    android:name="com.amazon.inapp.purchasing.NOTIFY"
                    android:permission="com.amazon.inapp.purchasing.Permission.NOTIFY" />
            </intent-filter>
        </receiver>

        <receiver
            android:exported="true"
            android:name="com.sponsorpay.sdk.android.advertiser.InstallReferrerReceiver"
            tools:ignore="ExportedReceiver">
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>
    </application>

</manifest>

