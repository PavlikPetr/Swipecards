<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="MissingTranslation">
    <!-- Данный конфиг используется для IllustratedTextView -->
    <string-array name="itv_templates">
        <item>{{coins}}</item>
        <item>{{refresh}}</item>
        <item>{{my_map}}</item>
        <item>{{map}}</item>
        <item>{{gift}}</item>
        <item>{{outbox}}</item>
        <item>{{balance_coins}}</item>
        <item>{{balance_sympathies}}</item>
        <!--
            здесь вы можете добавить ваши шаблоны,
            которые будут заменены картинками из массива itv_icons
        -->
    </string-array>

    <array name="itv_icons">
        <item>@drawable/resources_coins</item>
        <item>@drawable/refresh_icon</item>
        <item>@drawable/ico_my_map</item>
        <item>@drawable/ico_map</item>
        <item>@drawable/ico_gift</item>
        <item>@drawable/ico_outbox</item>
        <item>@drawable/ic_coins_selector</item>
        <item>@drawable/ic_sympathies_selector</item>
        <!--
            тут соответсвующие шаблонам из itv_templates изображения
        -->
    </array>

</resources>