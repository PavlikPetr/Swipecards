<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.topface.topface"
          android:installLocation="auto"
          android:versionCode="53"
          android:versionName="2.2.5">

    <uses-sdk
            android:minSdkVersion="7"
            android:targetSdkVersion="16"/>

    <!-- permissions -->
    <permission
            android:name="com.topface.topface.permission.C2D_MESSAGE"
            android:protectionLevel="signature"/>

    <uses-permission android:name="com.topface.topface.permission.C2D_MESSAGE"/>
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <uses-permission android:name="com.android.vending.BILLING"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <supports-screens
            android:resizeable="true"
            android:smallScreens="true"
            android:normalScreens="true"
            android:largeScreens="true"
            android:anyDensity="true"/>

    <application
            android:name=".App"
            android:hardwareAccelerated="true"
            android:icon="@drawable/ic_launcher"
            android:label="@string/app_name"
            android:theme="@style/Theme.Topface">

        <!-- Тип сборки. При релизе приложения не забываем его указать! -->
        <meta-data
                android:name="com.topface.topface.build"
                android:value="@string/build_default"/>

        <uses-library
                android:required="false"
                android:name="com.google.android.maps"/>

        <!-- activity -->
        <activity
                android:name=".ui.NavigationActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="stateHidden|adjustResize"
                >
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
                android:name=".utils.social.WebAuthActivity"
                android:screenOrientation="portrait"/>

        <activity
                android:name=".ui.CitySearchActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ui.GeoMapActivity"
                android:screenOrientation="portrait"
                android:windowSoftInputMode="adjustResize"/>
        <activity
                android:name=".ui.profile.PhotoSwitcherActivity"
                android:theme="@android:style/Theme.NoTitleBar.Fullscreen"
                />
        <activity
                android:name=".ui.edit.EditProfileActivity"
                android:screenOrientation="portrait"/>
        <activity
                android:name=".ui.edit.EditContainerActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.GiftsActivity"/>
        <activity
                android:name=".ui.LeadersActivity"
                android:screenOrientation="portrait"/>
        <activity android:name=".ui.settings.SettingsContainerActivity"/>
        <activity android:name=".ui.BanActivity"/>
        <activity
                android:name="com.google.ads.AdActivity"
                android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>
        <activity android:name="com.adfonic.android.AdfonicActivity"/>
        <activity android:name="ru.wapstart.plus1.sdk.MraidBrowser"/>
        <activity android:name=".ui.profile.BlackListActivity"/>
        <activity
                android:name=".ui.ContainerActivity"
                android:windowSoftInputMode="stateHidden|adjustResize"/>

        <!-- Алиас для главной активити из первой версии. На xвсякий случай, а то раньше уже были проблемы с FB -->
        <activity-alias
                android:name=".ui.MainActivity"
                android:targetActivity=".ui.NavigationActivity"/>

        <activity-alias
                android:name=".ui.AuthActivity"
                android:targetActivity=".ui.NavigationActivity"/>

        <!-- services -->
        <service android:name="com.topface.billing.googleplay.BillingService"/>

        <!-- receivers -->
        <receiver android:name="com.topface.billing.googleplay.BillingReceiver">
            <intent-filter>
                <action android:name="com.android.vending.billing.IN_APP_NOTIFY"/>
                <action android:name="com.android.vending.billing.RESPONSE_CODE"/>
                <action android:name="com.android.vending.billing.PURCHASE_STATE_CHANGED"/>
            </intent-filter>
        </receiver>


        <receiver android:name=".ReAuthReceiver">
            <intent-filter>
                <action android:name="com.topface.topface.action.AUTH"/>
            </intent-filter>
        </receiver>

        <!-- gcm -->
        <service android:name=".GCMIntentService"/>
        <receiver
                android:name="com.google.android.gcm.GCMBroadcastReceiver"
                android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE"/>
                <action android:name="com.google.android.c2dm.intent.REGISTRATION"/>

                <category android:name="com.topface.topface"/>
            </intent-filter>
        </receiver>

        <!-- Amazon In-App Purchasing -->
        <receiver android:name="com.amazon.inapp.purchasing.ResponseReceiver">
            <intent-filter>
                <action
                        android:name="com.amazon.inapp.purchasing.NOTIFY"
                        android:permission="com.amazon.inapp.purchasing.Permission.NOTIFY"/>
            </intent-filter>
        </receiver>

    </application>

</manifest>